{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["jest", "prettier"],
  "root": true,
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": true,
        "printWidth": 100,
        "trailingComma": "es5",
        "jsxSingleQuote": true
      }
    ]
  },

  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  }
}
