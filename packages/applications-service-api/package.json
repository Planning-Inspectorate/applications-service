{
	"name": "@pins/applications-service-api",
	"author": "Planning Inspectorate <github.com/Planning-Inspectorate>",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"node": ">=20.0.0 <21.0.0"
	},
	"main": "src/main.js",
	"scripts": {
		"db:migrate:dev": "npx prisma migrate dev",
		"db:generate": "npx prisma generate",
		"db:reset": "npx prisma migrate reset --force",
		"db:seed": "npx prisma db seed",
		"db:migrate:deploy": "npx prisma migrate deploy",
		"lint": "eslint ./",
		"lint:fix": "eslint ./ --fix",
		"start": "node ./",
		"start:dev": "nodemon -e .js,.json,.yml,.yaml ./ | pino-pretty -tlc",
		"start:dev:debug": "nodemon --inspect=0.0.0.0 -e .js,.json,.yml,.yaml ./ | pino-pretty -tlc",
		"test": "jest",
		"test:cov": "jest --coverage --verbose",
		"test:watch": "jest --watchAll --runInBand"
	},
	"prisma": {
		"seed": "node ./prisma/seed.js"
	},
	"dependencies": {
		"@azure/identity": "*",
		"@azure/service-bus": "*",
		"@azure/storage-blob": "*",
		"@pins/common": "*",
		"@planning-inspectorate/data-model": "*",
		"@planning-inspectorate/pins-notify": "*",
		"@prisma/client": "*",
		"applicationinsights": "*",
		"axios": "*",
		"axios-logger": "*",
		"body-parser": "*",
		"compression": "*",
		"csv-stringify": "*",
		"express": "*",
		"express-async-errors": "*",
		"express-fileupload": "*",
		"express-pino-logger": "*",
		"form-data": "*",
		"http-status-codes": "*",
		"js-yaml": "*",
		"json-diff": "*",
		"jspdf": "*",
		"lodash": "*",
		"moment": "*",
		"mysql2": "*",
		"openapi-request-validator": "*",
		"ospoint": "*",
		"pino": "*",
		"prisma": "*",
		"ramda": "*",
		"sequelize": "*",
		"sequelize-mock": "*",
		"swagger-ui-express": "*",
		"tcp-ping": "*",
		"uuid": "*"
	},
	"devDependencies": {
		"eslint": "*",
		"eslint-config-prettier": "*",
		"eslint-plugin-jest": "*",
		"jest": "*",
		"jest-junit": "*",
		"jest-when": "*",
		"node-mocks-http": "*",
		"nodemon": "*",
		"pino-pretty": "*",
		"supertest": "*"
	}
}
