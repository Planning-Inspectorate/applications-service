{
	"name": "forms-web-app",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"node": ">=14.0.0",
		"npm": ">=6.0.0"
	},
	"scripts": {
		"build": "npm run build:client && npm run build:sass && npm run build:app",
		"build:app": "cp -Rf ./src ./dist",
		"build:client": "webpack --config webpack.config.js",
		"build:sass": "sass src/sass/main.scss:src/public/stylesheets/main.css --style=compressed --load-path=./ --no-source-map",
		"lint": "eslint ./",
		"lint:fix": "eslint ./ --fix",
		"prebuild": "rm -Rf ./dist",
		"start": "node dist/server.js",
		"start:dev": "npm-run-all --parallel start:dev:server start:dev:client build:sass watch:sass",
		"start:dev:client": "webpack --config webpack.config.js --watch",
		"start:dev:debug": "npm-run-all --parallel start:dev:server:debug start:dev:client build:sass watch:sass",
		"start:dev:server": "nodemon src/server.js | pino-pretty -tlc",
		"start:dev:server:debug": "node --inspect-brk=0.0.0.0 src/server.js",
		"test": "jest",
		"test:cov": "jest --coverage --verbose",
		"test:watch": "jest --watchAll --runInBand",
		"watch:sass": "nodemon -e scss -x \"npm run build:sass\""
	},
	"dependencies": {
		"@ministryofjustice/frontend": "0.2.0",
		"@pins/common": "file:../common",
		"@planning-inspectorate/pins-components": "^2.2.0",
		"@testing-library/dom": "^7.31.2",
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/user-event": "^12.8.3",
		"accessible-autocomplete": "^2.0.3",
		"chokidar": "^3.5.3",
		"compression": "^1.7.4",
		"connect-redis": "^6.1.3",
		"cookie-parser": "~1.4.4",
		"express": "~4.16.1",
		"express-async-errors": "^3.1.1",
		"express-fileupload": "^1.4.0",
		"express-pino-logger": "^5.0.0",
		"express-session": "^1.17.2",
		"express-validator": "^6.12.1",
		"govuk-frontend": "^4.0.1",
		"html-escaper": "^2.0.2",
		"lusca": "^1.6.1",
		"moment": "^2.29.3",
		"node-fetch": "^2.6.2",
		"nunjucks": "^3.2.3",
		"nunjucks-date-filter": "^0.1.1",
		"pino": "^6.13.2",
		"redis": "3.1.2",
		"slugify": "^1.6.5",
		"string-collapse-white-space": "^9.1.0",
		"string-strip-html": "^8.3.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@babel/core": "^7.18.9",
		"@babel/preset-env": "^7.18.9",
		"babel-loader": "^8.2.5",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jest": "^24.4.0",
		"jest": "^28.1.1",
		"jest-environment-jsdom": "^28.1.1",
		"jest-fetch-mock": "^3.0.3",
		"jest-junit": "^13.2.0",
		"nodemon": "^2.0.12",
		"npm-run-all": "^4.1.5",
		"pino-pretty": "^4.8.0",
		"sass": "^1.39.0",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.8.0",
		"webpack-merge": "^5.8.0"
	}
}
