{% set hideBackLink = true %}
{% extends "layouts/register-main.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %},


{% block pageTitle %}
	Register to have your say about a national infrastructure project - National Infrastructure Planning
{% endblock %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">

			<h1 class="govuk-heading-l">
				{{ t("register.start.heading") }}
			</h1>

			<div>
				<a href="/lang?lang=en">English</a>
				&nbsp; | &nbsp;
				<a href="/lang?lang=cy">Welsh</a>
			</div>

			{{ t("register.start.blob", { projectName: projectName, closeDate: closeDate }) |safe }}

			{% if periodOpen %}
				<a href="/register/who-registering-for" role="button" draggable="false"
					 class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8"
					 data-module="govuk-button">
					{{ t("common.buttons.START_NOW") }}
					<svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19"
							 viewBox="0 0 33 40" role="presentation" focusable="false">
						<path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
					</svg>
				</a>
			{% endif %}

			<h2 class="govuk-heading-m">Before you start</h2>

			<h3 class="govuk-heading-s">If you are registering yourself as an individual</h3>
			<p>You will need your:</p>
			<ul class="govuk-list govuk-list--bullet">
				<li>full name</li>
				<li>address</li>
				<li>email address and telephone number</li>
				<li>registration comments about the project</li>
			</ul>
			<h3 class="govuk-heading-s">If you are registering for an organisation you work or volunteer for</h3>
			<p>You will need:</p>
			<ul class="govuk-list govuk-list--bullet">
				<li>your full name</li>
				<li>the name of the charity or organisation you work for</li>
				<li>your work address</li>
				<li>email address and telephone number</li>
				<li>registration comments about the project</li>
			</ul>
			<h3 class="govuk-heading-s">If you are registering on behalf of another person or organisation</h3>
			<p>You will need:</p>
			<ul class="govuk-list govuk-list--bullet">
				<ul class="govuk-list govuk-list--bullet">
					<li>your full name</li>
					<li>your address</li>
					<li>your email address and telephone number</li>
					<li>the details of the person, family group or organisation you are representing</li>
					<li>their registration comments about the project</li>
				</ul>

		</div>
	</div>
{% endblock %}
