{% extends "layouts/default.njk" %}

{% set pageTitle = t('contact.heading1') %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{ t('contact.heading1') }}
      </h1>

      <h2 class="govuk-heading-m">
        {{ t('contact.heading2') }}
      </h2>

      <p class="govuk-body">
        {{ t('contact.paragraph1') }}
      </p>

      <p class="govuk-body">
        {{ t('contact.paragraph2') }}
      </p>

      <p class="govuk-body">
        {{ t('contact.paragraph3', { link: '<a class="govuk-link" href="' + pinsContactDetails.contactUsFormURL + '">' + t('contact.paragraph3LinkText') + '</a>' }) | safe }}
      </p>

      <p class="govuk-body">
        {{ t('contact.paragraph4', { link: '<a class="govuk-link" href="mailto:' + pinsContactDetails.enquiriesEmailAddress + '">' + pinsContactDetails.enquiriesEmailAddress + '</a>' }) | safe }}
      </p>

      <p class="govuk-body">
        {{ t('contact.paragraph5') }}
      </p>

      <p class="govuk-body">
        {{ t('contact.paragraph6') }}
        <a class="govuk-link" href="tel:{{ pinsContactDetails.supportTeamPhoneNumber }}">{{ pinsContactDetails.supportTeamPhoneNumber }}</a>
        <br>
        {{ t('common.pinsContactDetails.csOpeningHours') }}
      </p>

      <p class="govuk-body">
        {{ t('contact.paragraph8') }}
        <br>
        The Planning Inspectorate
        <br>
        Room 3/OP
        <br>
        Temple Quay House
        <br>
        2 The Square
        <br>
        Temple Quay
        <br>
        Bristol
        <br>
        BS1 6PN
        <br>
      </p>

      <p class="govuk-body">
        {{ t('contact.paragraph9') }}
        <a class="govuk-link" href="{{ pinsSocialMedia.twitterURL }}">{{ pinsSocialMedia.twitterHandle }}</a>
      </p>

      <p class="govuk-body">
        {{ t('contact.paragraph10', { link: '<a class="govuk-link" href="' + govUK.furtherInformationURL + '">GOV.UK</a>' }) | safe }}
      </p>

      <h2 class="govuk-heading-m">
        {{ t('contact.heading3') }}
      </h2>

      <p class="govuk-body">
        {{ t('contact.paragraph11') }}
      </p>

      <h2 class="govuk-heading-m">
        {{ t('contact.heading4') }}
      </h2>

      <p class="govuk-body">
        {{ t('contact.paragraph12') }}
        <a class="govuk-link" href="tel:{{ pinsContactDetails.pressAndMediaPhoneNumber }}">{{ pinsContactDetails.pressAndMediaPhoneNumber }}</a>
        <br>
        {{ t('contact.paragraph13') }}
        <a class="govuk-link" href="mailto:{{ pinsContactDetails.pressAndMediaEmailAddress }}">{{ pinsContactDetails.pressAndMediaEmailAddress }}</a>
      </p>

      <p class="govuk-body">
        {{ t('contact.paragraph14', { openingHours: t('common.govUK.pressOfficeOpeningHours') }) }}
      </p>
    </div>
  </div>
{% endblock %}