{% extends "layouts/default.njk" %}

{% set templateID = 'main' %}

{% block script %}
	{% set initiateScriptsConfig = (initiateScriptsConfig.push({
		callback: "
			var $element = document.querySelector('#step-by-step-navigation')
    	var stepByStepNavigation = new GOVUK.Modules.AppStepNav($element).init()
    ",
		src: "/public/scripts/step-by-step-navigation.script.js"
	}), initiateScriptsConfig) %}
{% endblock %}

{% block pageTitle %}
  {{ t('processGuide.applicationSummary.heading1') }}
{% endblock %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<h1 class="govuk-heading-xl">
        {{ t('processGuide.applicationSummary.heading1') }}
      </h1>

	  <p class="govuk-body">
        {{ t('processGuide.applicationSummary.paragraph1') }}
      </p>

			<p class="govuk-body">
        		{{ t('processGuide.applicationSummary.paragraph2') }}
			</p>

			<ul class="govuk-list govuk-list--bullet">
				<li>{{ t('processGuide.applicationSummary.listItem1') }}</li>
				<li>{{ t('processGuide.applicationSummary.listItem2') }}</li>
				<li>{{ t('processGuide.applicationSummary.listItem3') }}</li>
				<li>{{ t('processGuide.applicationSummary.listItem4') }}</li>
				<li>{{ t('processGuide.applicationSummary.listItem5') }}</li>
			</ul>

			<p class="govuk-body">
        		{{ t('processGuide.applicationSummary.paragraph3') }}
			</p>

			<ul class="govuk-list govuk-list--bullet">
				<li>{{ t('processGuide.applicationSummary.listItem6') }}</li>
				<li>{{ t('processGuide.applicationSummary.listItem7') }}</li>
				<li>{{ t('processGuide.applicationSummary.listItem8') }}</li>
				<li>{{ t('processGuide.applicationSummary.listItem9') }}</li>
				<li>{{ t('processGuide.applicationSummary.listItem10') }}</li>
			</ul>

			<p class="govuk-body">
        		{{ t('processGuide.applicationSummary.paragraph4') }}
			</p>

			<p class="govuk-body">
				{{ t('processGuide.applicationSummary.paragraph5') }}
			</p>

			<p class="govuk-body">
        		{{ t('processGuide.applicationSummary.paragraph6') }}
			</p>

			<h2 class="govuk-heading-m">
				{{ t('processGuide.haveYourSay.heading2') }}
			</h2>

			<p class="govuk-body">
        		{{ t('processGuide.haveYourSay.paragraph7') }}
			</p>

			<p class="govuk-body">
        		{{ t('processGuide.haveYourSay.paragraph8') }}
			</p>

			<p class="govuk-body">
				{{ t('processGuide.haveYourSay.paragraph9', { link: '<a class="govuk-link" href="' + haveYourSayGuideURL + '">' + t('processGuide.haveYourSay.paragraph9LinkText') + '</a>' }) | safe }}
			</p>

			{% include "process-guide/_includes/process-guide-steps.njk" %}
		</div>
	</div>
{% endblock %}