{% extends "layouts/default.njk" %}

{% set templateID = 'main' %}

{% block script %}
	{% set initiateScriptsConfig = (initiateScriptsConfig.push({
		callback: "
			var $element = document.querySelector('#step-by-step-navigation')
    	var stepByStepNavigation = new GOVUK.Modules.AppStepNav($element).init()
    ",
		src: "/public/scripts/step-by-step-navigation.script.js"
	}), initiateScriptsConfig) %}
{% endblock %}

{% block pageTitle %}
  {{ t('processGuide.index.heading1') }}
{% endblock %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<h1 class="govuk-heading-xl">
        {{ t('processGuide.index.heading1') }}
      </h1>

	  <p class="govuk-body">
        {{ t('processGuide.index.paragraph1') }}
      </p>

			<p class="govuk-body">
        		{{ t('processGuide.index.paragraph2') }}
			</p>

			<ul class="govuk-list govuk-list--bullet">
				<li>{{ t('processGuide.index.listItem1') }}</li>
				<li>{{ t('processGuide.index.listItem2') }}</li>
				<li>{{ t('processGuide.index.listItem3') }}</li>
				<li>{{ t('processGuide.index.listItem4') }}</li>
				<li>{{ t('processGuide.index.listItem5') }}</li>
			</ul>

			<p class="govuk-body">
        		{{ t('processGuide.index.paragraph3') }}
			</p>

			<ul class="govuk-list govuk-list--bullet">
				<li>{{ t('processGuide.index.listItem6') }}</li>
				<li>{{ t('processGuide.index.listItem7') }}</li>
				<li>{{ t('processGuide.index.listItem8') }}</li>
				<li>{{ t('processGuide.index.listItem9') }}</li>
				<li>{{ t('processGuide.index.listItem10') }}</li>
			</ul>

			<p class="govuk-body">
        		{{ t('processGuide.index.paragraph4') }}
			</p>

			<p class="govuk-body">
				{{ t('processGuide.index.paragraph5') }}
			</p>

			<p class="govuk-body">
        		{{ t('processGuide.index.paragraph6') }}
			</p>

			<h2 class="govuk-heading-m">
				{{ t('processGuide.index.heading2') }}
			</h2>

			<p class="govuk-body">
        		{{ t('processGuide.index.paragraph7') }}
			</p>

			<p class="govuk-body">
        		{{ t('processGuide.index.paragraph8') }}
			</p>

			<p class="govuk-body">
				{{ t('processGuide.index.paragraph9', { link: '<a class="govuk-link" href="' + haveYourSayGuideURL + '">' + t('processGuide.index.paragraph9LinkText') + '</a>' }) | safe }}
			</p>

			{% include "process-guide/_includes/process-guide-steps.njk" %}
		</div>
	</div>
{% endblock %}