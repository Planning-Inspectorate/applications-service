{% extends "layouts/default.njk" %}

{% set templateID = 'main' %}

{% block script %}
	{% set initiateScriptsConfig = (initiateScriptsConfig.push({
		callback: "
			var $element = document.querySelector('#step-by-step-navigation')
    	var stepByStepNavigation = new GOVUK.Modules.AppStepNav($element).init()
    ",
		src: "/public/scripts/step-by-step-navigation.script.js"
	}), initiateScriptsConfig) %}
{% endblock %}

{% block pageTitle %}
	{{ t('processGuide.common.processGuide') }} - {{ t('processGuide.index.heading1') }}
{% endblock %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<h1 class="govuk-heading-xl">
				{{ t('processGuide.index.heading1') }}
			</h1>

			<p class="govuk-body">
				{{ t('processGuideIndex.paragraph1') }}
			</p>

			<p class="govuk-body">
				{{ t('processGuideIndex.paragraph2') }}
			</p>

			<ul class="govuk-list govuk-list--bullet">
				<li>{{ t('processGuideIndex.listItem1') }}</li>
				<li>{{ t('processGuideIndex.listItem2') }}</li>
				<li>{{ t('processGuideIndex.listItem3') }}</li>
				<li>{{ t('processGuideIndex.listItem4') }}</li>
				<li>{{ t('processGuideIndex.listItem5') }}</li>
			</ul>

			<p class="govuk-body">
				{{ t('processGuideIndex.paragraph3') }}
			</p>

			<ul class="govuk-list govuk-list--bullet">
				<li>{{ t('processGuideIndex.listItem6') }}</li>
				<li>{{ t('processGuideIndex.listItem7') }}</li>
				<li>{{ t('processGuideIndex.listItem8') }}</li>
				<li>{{ t('processGuideIndex.listItem9') }}</li>
				<li>{{ t('processGuideIndex.listItem10') }}</li>
			</ul>

			<p class="govuk-body">
				{{ t('processGuideIndex.paragraph4') }}
			</p>

			<p class="govuk-body">
				{{ t('processGuideIndex.paragraph5') }}
			</p>

			<p class="govuk-body">
				{{ t('processGuideIndex.paragraph6') }}
			</p>

			<h2 class="govuk-heading-m">
				{{ t('processGuideIndex.heading2') }}
			</h2>

			<p class="govuk-body">
				{{ t('processGuideIndex.paragraph7') }}
			</p>

			<p class="govuk-body">
				{{ t('processGuideIndex.paragraph8') }}
			</p>

			<p class="govuk-body">
				{{ t('processGuideIndex.paragraph9', { link: '<a class="govuk-link" href="' + haveYourSayGuideURL + '">' + t('processGuideIndex.paragraph9LinkText') + '</a>' }) | safe }}
			</p>

			{% include "process-guide/_includes/process-guide-steps.njk" %}
		</div>
	</div>
{% endblock %}