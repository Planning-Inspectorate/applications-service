{% extends "layouts/default.njk" %}

{% from "components/ui/next-step.njk" import uiNextStep %}

{% block pageTitle %}
	{{ t('processGuide.common.processGuide') }} - {{ t('processGuide.preApplication.heading1') }}
{% endblock %}

{% block content %}
	<h1 class="govuk-heading-xl">
		{{ t('processGuide.preApplication.heading1') }}
	</h1>

	<h2 class="style-contents-list-title govuk-heading-s">
		{{ t('common.contents') }}
	</h2>

	<ol class="govuk-list style-contents-list">
		<li>
			<a class="govuk-link" href="#the-pre-application-stage">{{ t('preApplication.heading2') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#about-the-pre-application-service-for-applicants">{{ t('preApplication.heading3') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#advive-for-local-authorities-at-the-pre-application-stage">{{ t('preApplication.heading4') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#more-detailed-advice">{{ t('preApplication.heading5') }}</a>
		</li>
	</ol>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<div class="pins-step-by-step-section-main govuk-!-padding-top-4" style="border-top: 1px solid #707070;">
				<h2 class="govuk-heading-m" id="the-pre-application-stage">
					{{ t('preApplication.heading2') }}
				</h2>

				<p class="govuk-body">
					{{ t('preApplication.paragraph1') }}
				</p>

				<p class="govuk-body">
					{{ t('preApplication.paragraph2') }}
				</p>

				<ul class="govuk-list govuk-list--bullet">
					<li>{{ t('preApplication.listItem1') }}</li>
					<li>{{ t('preApplication.listItem2') }}</li>
					<li>{{ t('preApplication.listItem3') }}</li>
					<li>{{ t('preApplication.listItem4') }}</li>
					<li>{{ t('preApplication.listItem5') }}</li>
				</ul>

				<p class="govuk-body">
					{{ t('preApplication.paragraph3') }}
				</p>

				<p class="govuk-body">
					{{ t('preApplication.paragraph4') }}
				</p>

				<p class="govuk-body">
					{{ t('preApplication.paragraph5', { link: '<a class="govuk-link" href="' + haveYourSayGuideURL + '">' +  t('preApplication.paragraph5LinkText') + '</a>' }) | safe }}
				</p>

				<h2 class="govuk-heading-m" id="about-the-pre-application-service-for-applicants">
					{{ t('preApplication.heading3') }}
				</h2>

				<p class="govuk-body">
					{{ t('preApplication.paragraph6') }}
				</p>

				<p class="govuk-body">
					{{ t('preApplication.paragraph7') }}
				</p>

				<ul class="govuk-list govuk-list--bullet">
					<li>{{ t('preApplication.listItem6') }}</li>
					<li>{{ t('preApplication.listItem7') }}</li>
					<li>{{ t('preApplication.listItem8') }}</li>
				</ul>

				<h2 class="govuk-heading-m" id="advive-for-local-authorities-at-the-pre-application-stage">
					{{ t('preApplication.heading4') }}
				</h2>

				<p class="govuk-body">
					{{ t('preApplication.paragraph8', { link: '<a class="govuk-link" href="' + pinsURL.advicePages + '">' +  t('preApplication.paragraph8LinkText') + '</a>' }) | safe }}
				</p>

				<h2 class="govuk-heading-m" id="more-detailed-advice">
					{{ t('preApplication.heading5') }}
				</h2>

				<p class="govuk-body">
					{{ t('preApplication.paragraph9') }}
				</p>

				<p class="govuk-body">
					<a class="govuk-link" href="{{ pinsURL.advicePages }}">{{ t('preApplication.paragraph10LinkText') }}</a>
				</p>

				{{ uiNextStep(processGuide.activeStep.nextStepURL, processGuide.activeStep.nextStepTitle, t('common.next')) }}
			</div>
		</div>

		<div class="govuk-grid-column-one-third">
			{% include "process-guide/_includes/process-guide-steps.njk" %}
		</div>
	</div>
{% endblock %}