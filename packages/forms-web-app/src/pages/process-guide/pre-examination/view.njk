{% from "components/ui/next-step.njk" import uiNextStep %}

{% block pageTitle %}
	{{ t('processGuide.common.processGuide') }} - {{ t('processGuide.preExamination.heading1') }}
{% endblock %}

{% block content %}
	<h1 class="govuk-heading-xl">
		{{ t('processGuide.preExamination.heading1') }}
	</h1>

	<h2 class="style-contents-list-title govuk-heading-s">
		{{ t('common.contents') }}
	</h2>

	<ol class="govuk-list style-contents-list">
		<li>
			<a class="govuk-link" href="#preparing-for-the-examination-stage">{{ t('preExamination.heading2') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#registering-to-have-your-say">{{ t('preExamination.heading3') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#preliminary-meeting">{{ t('preExamination.heading4') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#what-happens-next">{{ t('preExamination.heading5') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#more-detailed-advice">{{ t('preExamination.heading6') }}</a>
		</li>
	</ol>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<div class="pins-step-by-step-section-main govuk-!-padding-top-4" style="border-top: 1px solid #707070;">
				<h2 class="govuk-heading-m" id="preparing-for-the-examination-stage">
					{{ t('preExamination.heading2') }}
				</h2>

				<p class="govuk-body">
					{{ t('preExamination.paragraph1') }}
				</p>

				<p class="govuk-body">
					{{ t('preExamination.paragraph2') }}
				</p>

				<p class="govuk-body">
					{{ t('preExamination.paragraph3') }}
				</p>

				<ul class="govuk-list govuk-list--bullet">
					<li>{{ t('preExamination.listItem1') }}</li>
					<li>{{ t('preExamination.listItem2') }}</li>
					<li>{{ t('preExamination.listItem3') }}</li>
				</ul>

				<h2 class="govuk-heading-m" id="registering-to-have-your-say">
					{{ t('preExamination.heading3') }}
				</h2>

				<p class="govuk-body">
					{{ t('preExamination.paragraph4') }}
				</p>

				<p class="govuk-body">
					{{ t('preExamination.paragraph5') }}
				</p>

				<p class="govuk-body">
					{{ t('preExamination.paragraph6', { link: '<a class="govuk-link" href="' + haveYourSayGuideURL + '">' +  t('preExamination.paragraph6LinkText') + '</a>' }) | safe }}
				</p>

				<h2 class="govuk-heading-m" id="preliminary-meeting">
					{{ t('preExamination.heading4') }}
				</h2>

				<p class="govuk-body">
					{{ t('preExamination.paragraph7') }}
				</p>

				<p class="govuk-body">
					{{ t('preExamination.paragraph8') }}
				</p>

				<p class="govuk-body">
					{{ t('preExamination.paragraph9') }}
				</p>

				<p class="govuk-body">
					{{ t('preExamination.paragraph10') }}
				</p>

				<ul class="govuk-list govuk-list--bullet">
					<li>
						{{ t('preExamination.listItem4') }}
					</li>
					<li>
						{{ t('preExamination.listItem5') }}
					</li>
					<li>
						{{ t('preExamination.listItem6') }}
					</li>
					<li>
						{{ t('preExamination.listItem7') }}
					</li>
				</ul>

				<h2 class="govuk-heading-m" id="what-happens-next">
					{{ t('preExamination.heading5') }}
				</h2>

				<p class="govuk-body">
					{{ t('preExamination.paragraph11') }}
				</p>

				<p class="govuk-body">
					{{ t('preExamination.paragraph12') }}
				</p>

				<h2 class="govuk-heading-m" id="more-detailed-advice">
					{{ t('preExamination.heading6') }}
				</h2>

				<p class="govuk-body">
					{{ t('preExamination.paragraph13', { link: '<a class="govuk-link" href="' + pinsURL.adviceNotes + '">' +  t('preExamination.paragraph13LinkText') + '</a>' }) | safe }}
				</p>

				{{ uiNextStep(processGuide.activeStep.nextStepURL, processGuide.activeStep.nextStepTitle, t('common.next')) }}
			</div>
		</div>

		<div class="govuk-grid-column-one-third">
			{% include "process-guide/_includes/process-guide-steps.njk" %}
		</div>
	</div>
