{% extends "layouts/default.njk" %}

{% from "components/ui/next-step.njk" import uiNextStep %}

{% block pageTitle %}
	{{ t('processGuide.common.processGuide') }} - {{ t('processGuide.acceptance.heading1') }}
{% endblock %}

{% block content %}
	<h1 class="govuk-heading-xl">
		{{ t('processGuide.acceptance.heading1') }}
	</h1>

	<h2 class="style-contents-list-title govuk-heading-s">
		{{ t('common.contents') }}
	</h2>

	<ol class="govuk-list style-contents-list">
		<li>
			<a class="govuk-link" href="#the-acceptance-stage">{{ t('acceptance.heading2') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#what-we-consider-at-the-acceptance-stage">{{ t('acceptance.heading3') }}</a>
		</li>
	</ol>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<div class="pins-step-by-step-section-main govuk-!-padding-top-4" style="border-top: 1px solid #707070;">
				<h2 class="govuk-heading-m" id="the-acceptance-stage">
					{{ t('acceptance.heading2') }}
				</h2>

				<p class="govuk-body">
					{{ t('acceptance.paragraph1') }}
				</p>

				<p class="govuk-body">
					{{ t('acceptance.paragraph2') }}
				</p>

				<ul class="govuk-list govuk-list--bullet">
					<li>{{ t('acceptance.listItem1') }}</li>
					<li>{{ t('acceptance.listItem2') }}</li>
					<li>{{ t('acceptance.listItem3') }}</li>
				</ul>

				<p class="govuk-body">
					{{ t('acceptance.paragraph3') }}
				</p>

				<h2 class="govuk-heading-m" id="what-we-consider-at-the-acceptance-stage">
					{{ t('acceptance.heading3') }}
				</h2>

				<p class="govuk-body">
					{{ t('acceptance.paragraph4') }}
				</p>

				<p class="govuk-body">
					{{ t('acceptance.paragraph5') }}
				</p>

				{{ uiNextStep(processGuide.activeStep.nextStepURL, processGuide.activeStep.nextStepTitle, t('common.next')) }}
			</div>
		</div>

		<div class="govuk-grid-column-one-third">
			{% include "process-guide/_includes/process-guide-steps.njk" %}
		</div>
	</div>
{% endblock %}