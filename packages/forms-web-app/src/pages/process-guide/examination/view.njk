{% extends "layouts/default.njk" %}

{% from "components/ui/next-step.njk" import uiNextStep %}

{% block pageTitle %}
	{{ t('processGuide.common.processGuide') }} - {{ t('processGuide.examination.heading1') }}
{% endblock %}

{% block content %}
	<h1 class="govuk-heading-xl">
		{{ t('processGuide.examination.heading1') }}
	</h1>

	<h2 class="style-contents-list-title govuk-heading-s">{{ t('common.contents') }}</h2>

	<ol class="govuk-list style-contents-list">
		<li>
			<a class="govuk-link" href="#about-the-examination-stage">{{ t('examination.heading2') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#what-happens-at-the-examination-stage">{{ t('examination.heading3') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#when-you-have-registered">{{ t('examination.heading4') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#missed-the-deadline">{{ t('examination.heading5') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#gained-an-interest">{{ t('examination.heading6') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#more-information">{{ t('examination.heading7') }}</a>
		</li>
	</ol>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<div class="pins-step-by-step-section-main govuk-!-padding-top-4" style="border-top: 1px solid #707070;">
				<h2 class="govuk-heading-m" id="about-the-examination-stage">
					{{ t('examination.heading2') }}
				</h2>

				<p class="govuk-body">
					{{ t('examination.paragraph1') }}
				</p>

				<p class="govuk-body">
					{{ t('examination.paragraph2') }}
				</p>

				<p class="govuk-body">
					{{ t('examination.paragraph3') }}
				</p>

				<p class="govuk-body">
					{{ t('examination.paragraph4') }}
				</p>

				<h2 class="govuk-heading-m" id="what-happens-at-the-examination-stage">
					{{ t('examination.heading3') }}
				</h2>

				<p class="govuk-body">
					{{ t('examination.paragraph5') }}
				</p>

				<p class="govuk-body">
					{{ t('examination.paragraph6') }}
				</p>

				<p class="govuk-body">
					{{ t('examination.paragraph7') }}
				</p>

				<h2 class="govuk-heading-m" id="when-you-have-registered">
					{{ t('examination.heading4') }}:
				</h2>

				<ul class="govuk-list govuk-list--bullet">
					<li>{{ t('examination.listItem1') }}</li>
					<li>{{ t('examination.listItem2') }}</li>
					<li>{{ t('examination.listItem3') }}</li>
				</ul>

				<p class="govuk-body">
					{{ t('examination.paragraph8') }}
				</p>

				<p class="govuk-body">
					{{ t('examination.paragraph9') }}
				</p>

				<p class="govuk-body">
					{{ t('examination.paragraph10', { link: '<a class="govuk-link" href="' + haveYourSayGuideURL + '">' +  t('examination.paragraph10LinkText') + '</a>' }) | safe }}
				</p>

				<h2 class="govuk-heading-m" id="missed-the-deadline">
					{{ t('examination.heading5') }}
				</h2>

				<p class="govuk-body">
					{{ t('examination.paragraph11') }}
				</p>

				<h2 class="govuk-heading-m" id="gained-an-interest">
					{{ t('examination.heading6') }}
				</h2>

				<p class="govuk-body">
					{{ t('examination.paragraph12') }}
				</p>

				<p class="govuk-body">
					{{ t('examination.paragraph13') }}
				</p>

				<h2 class="govuk-heading-m" id="more-information">
					{{ t('examination.heading7') }}
				</h2>

				<p class="govuk-body">
					{{ t('examination.paragraph14') }}
				</p>

				<p class="govuk-body">
					{{ t('examination.paragraph15', { link: '<a class="govuk-link" href="' + pinsURL.adviceNotes + '">' +  t('examination.paragraph15LinkText') + '</a>' }) | safe }}
				</p>

				{{ uiNextStep(processGuide.activeStep.nextStepURL, processGuide.activeStep.nextStepTitle, t('common.next')) }}
			</div>
		</div>

		<div class="govuk-grid-column-one-third">
			{% include "process-guide/_includes/process-guide-steps.njk" %}
		</div>
	</div>
{% endblock %}