{% extends "layouts/default.njk" %}

{% block pageTitle %}
  {{ t('processGuide.common.processGuide') }} - {{ t('processGuide.postDecision.heading1') }}
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">
    {{ t('processGuide.postDecision.heading1') }}
  </h1>

  <h2 class="style-contents-list-title govuk-heading-s">
    {{ t('common.contents') }}
  </h2>

  <ol class="govuk-list style-contents-list">
    <li>
      <a class="govuk-link" href="#after-the-decision-is-made">{{ t('postDecision.heading2') }}</a>
    </li>
  </ol>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="pins-step-by-step-section-main govuk-!-padding-top-4" style="border-top: 1px solid #707070;">
        <h2 class="govuk-heading-m" id="after-the-decision-is-made">
          {{ t('postDecision.heading2') }}
        </h2>

        <p class="govuk-body">
          {{ t('postDecision.paragraph1') }}
        </p>
      </div>
    </div>

    <div class="govuk-grid-column-one-third">
      {% include "process-guide/_includes/process-guide-steps.njk" %}
    </div>
  </div>
{% endblock %}