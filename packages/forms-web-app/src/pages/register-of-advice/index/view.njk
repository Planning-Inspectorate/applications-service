{% extends "layouts/default.njk" %}

{% block pageTitle %}
	{{ t('registerOfAdvice.pageHeading') }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">

		{% if featureFlag.displaySpecificAndGeneralAdvice == true %}

    	<div class="govuk-grid-column-full-width">

		{% else %}

			<div class="govuk-grid-column-two-thirds">

		{% endif %}

      <h1 class="govuk-heading-xl">
        {{ t('registerOfAdvice.pageHeading') }}
      </h1>

			{% if featureFlag.displaySpecificAndGeneralAdvice == true %}

				<p class="govuk-body">
					{{ t('registerOfAdvice.paragraph2') }}
				</p>

			{% else %}

				<p class="govuk-body">
					{{ t('registerOfAdvice.paragraph1') }}
				</p>

				<p class="govuk-body">
					{{ t('registerOfAdvice.paragraph3') }}
				</p>

				<p class="govuk-body">
					<a class="govuk-link" href="{{ projectSearchURL }}">{{ t('registerOfAdvice.viewAllProjectsLink') }}</a>
				</p>

			{% endif %}

      {% if advice | length or searchTerm %}

        {% include "./_includes/search.njk" %}

        {% if advice | length %}

          {% include "./_includes/results-per-page.njk" %}

          {% include "./_includes/results.njk" %}

          {% include "./_includes/pagination.njk" %}

        {% elseif searchTerm %}

          {% include "./_includes/no-results-found.njk" %}

        {% endif %}

      {% endif %}
    </div>
  </div>
{% endblock %}
