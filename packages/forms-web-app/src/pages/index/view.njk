{% extends "layouts/default.njk" %}
{% from "components/ui/chevron-card.njk" import chevronCard %}
{% from "components/ui/search-bar.njk" import uiSearchBar %}

{% set pageTitle = t('index.heading1') %}
{% set mainClasses = "pins-modded-no-padding" %}
{% set pinsIndexURL = pinsURL.index %}
{% if language == 'cy' %}
	{% set pinsIndexURL = pinsURL.indexCY %}
{% endif %}

{% block content %}
	<div class="masthead masthead--full-width masthead--bg-teal">
		<div class="masthead__content">
			<div class="govuk-grid-row">
				<div class="govuk-grid-column-two-thirds">
					<h1 class="govuk-heading-xl masthead__title">
						{{ t('index.heading1') }}
					</h1>

					<p class="masthead__text">
						{{ t('index.paragraph1') }}
					</p>

					<p class="masthead__text">
						{{ t('index.paragraph2') }}
					</p>

					{% if not allowWelshCases %}
						<p class="masthead__text">
							{{ t('index.paragraph3', { link: '<a class="govuk-link govuk-link--inverse" href="' + pinsIndexURL + '">' + t('index.paragraph3LinkText') + '</a>' }) | safe }}
						</p>
					{% endif %}
				</div>
			</div>
		</div>
	</div>

	<div class="full-width-line full-width-line--bg-blue"></div>

	<section class="page-section full-width-section full-width-section--bg-lightgrey govuk-!-margin-bottom-6 govuk-!-padding-top-6">
		<div class="page-section__content">
			<div class="govuk-grid-row">
				<div class="govuk-grid-column-one-half">
					<h2 class="govuk-heading-m">
						{{ t('index.heading2') }}
					</h2>

					<p class="govuk-body">
						{{ t('index.paragraph4') }}
					</p>

					<form action="{{ homePageUrls.projectSearchURL }}" method="get">
						{{ uiSearchBar('homepage-search-bar', 'searchTerm', '', t('index.paragraph4'), t('common.search')) }}
					</form>
				</div>
				<div class="govuk-grid-column-one-half">
					<h2 class="govuk-heading-m ">
						{{ t('index.heading3') }}
					</h2>
					<p class="govuk-body">
    		{{ t('index.paragraph5', { link: '<a class="govuk-link" href="' + homePageUrls.projectSearchURL + '">' + t('index.paragraph5LinkText') + '</a>' }) | safe }}
					</p>
					{% if FEATURE_ENABLE_PROJECTS_MAP %}
					<p class="govuk-body">
							{{ t('index.paragraph7', { link: '<a class="govuk-link" href="/projects-map">' + t('index.paragraph7LinkText') + '</a>' }) | safe }}
					</p>
					{% endif %}
				</div>
			</div>
		</div>
	</section>

	{% include "./_includes/members-of-public.njk" %}

	{% include "./_includes/professional-users.njk" %}

	{% include "./_includes/updates-and-contacts.njk" %}
{% endblock %}
