{% extends "layouts/default.njk" %}

{% from "./components/latest-update.njk" import getLatestUpdate %}

{% set activeId = "project-information" %}

{% set pageTitle = projectName + " - Project Information" %}
{% set pageHeading = "Project Information" %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-one-third">
			{% include "projects/components/vertical-tabs-wrapper.njk" %}
		</div>

		<div class="govuk-grid-column-two-thirds">
			<span class="govuk-caption-l">{{ applicationData.projectName }}</span>
    	
			<h1 class="govuk-heading-xl">{{ pageHeading }}</h1>
				
			{{ getLatestUpdate(latestUpdate, caseRef) }}

			{% include "projects/project-information/includes/about.njk" %}
			<hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible" />

			{% include "projects/project-information/includes/get-updates.njk" %}
			<hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible" />

			{% include "projects/project-information/includes/contact.njk" %}
			<hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible"/>
		</div>


	</div>
{% endblock %}
