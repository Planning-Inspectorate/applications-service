{% macro stageProgressTag(status, trigger) %}

        {% if status < trigger %}
            {% set progressTagColorClass = 'govuk-tag govuk-tag--grey' %}
            {% set progressLabel = 'Not started' %}
        {% endif %}

        {% if status == trigger %}
            {% set progressTagColorClass = 'govuk-tag  govuk-tag--blue' %}
            {% set progressLabel = 'In progress' %}
        {% endif %}

        {% if status > trigger %}
            {% set progressTagColorClass = 'govuk-tag' %}
            {% set progressLabel = 'Completed' %}
        {% endif %}

        {% if status == 7 %}
            {% set progressTagColorClass = '' %}
            {% set progressLabel = '' %}
        {% endif %}

    <strong class="{{progressTagColorClass}} -white-space--nowrap">{{ progressLabel}}</strong>
    
{% endmacro %}