<h2 class="govuk-heading-m">
  Project location
</h2>

{% if applicationData.projectLocation %}

  <p class="govuk-body" id="project-location">
    At, and in the vicinity of, {{ applicationData.projectLocation }}
  </p>

{% endif %}

{% if mapAccessToken %}

  <div class="pins-map">
    <div class="pins-map__container">
      <div id="map" class="pins-map__content" role="region" aria-roledescription="map" aria-labelledby="project-location"></div>
    </div>
  </div>

{% endif %}