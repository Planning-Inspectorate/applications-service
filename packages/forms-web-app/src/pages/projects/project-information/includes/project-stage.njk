<section>
	<h2 class="govuk-heading-m">Project stage</h2>

	<p>This project is at the <strong>{{ applicationData.status.text | lower }}</strong> stage</p>

	{% if applicationData.status.text === projectStages[1] %}
		{% include "projects/project-information/includes/stages/pre-application/description.njk" %}
	{% endif %}

	{% if applicationData.status.text === projectStages[2] %}
		{% include "projects/project-information/includes/stages/acceptance/description.njk" %}
	{% endif %}

	{% if applicationData.status.text === projectStages[3] %}
		{% include "projects/project-information/includes/stages/pre-examination/description.njk" %}
	{% endif %}

	{% if applicationData.status.text === projectStages[4] %}
		{% include "projects/project-information/includes/stages/examination/description.njk" %}
	{% endif %}
	
	{% if applicationData.status.text === projectStages[5] %}
		{% include "projects/project-information/includes/stages/recommendation/description.njk" %}
	{% endif %}

	{% if applicationData.status.text === projectStages[6] %}
		{% include "projects/project-information/includes/stages/decision/description.njk" %}
	{% endif %}

	{% if applicationData.status.text === projectStages[7] %}
		{% include "projects/project-information/includes/stages/post-decision/description.njk" %}
	{% endif %}

	<dl class="govuk-summary-list pins-modded-last-item-border-none">
		<div id="project-stage-{{ projectStages[1] | lower }}" class="govuk-summary-list__row">
			<dt class="govuk-summary-list__value">
				{% include "projects/project-information/includes/stages/pre-application/details.njk" %}
			</dt>
			<dd class="govuk-summary-list__actions">
				{{ stageProgressTag( applicationData.status.number, 1) }}
			</dd>
		</div>
		<div id="project-stage-{{ projectStages[2] | lower }}" class="govuk-summary-list__row">
			<dt class="govuk-summary-list__value">
				{% include "projects/project-information/includes/stages/acceptance/details.njk" %}
			</dt>
			<dd class="govuk-summary-list__actions">
				{{ stageProgressTag( applicationData.status.number, 2) }}
			</dd>
		</div>
		<div id="project-stage-{{ projectStages[3] | lower }}" class="govuk-summary-list__row">
			<dt class="govuk-summary-list__value">
				{% include "projects/project-information/includes/stages/pre-examination/details.njk" %}
			</dt>
			<dd class="govuk-summary-list__actions">
				{{ stageProgressTag( applicationData.status.number, 3) }}
			</dd>
		</div>
		<div id="project-stage-{{ projectStages[4] | lower }}" class="govuk-summary-list__row">
			<dt class="govuk-summary-list__value">
				{% include "projects/project-information/includes/stages/examination/details.njk" %}
			</dt>
			<dd class="govuk-summary-list__actions">
				{{ stageProgressTag( applicationData.status.number, 4) }}
			</dd>
		</div>
		<div id="project-stage-{{ projectStages[5] | lower }}" class="govuk-summary-list__row">
			<dt class="govuk-summary-list__value">
				{% include "projects/project-information/includes/stages/recommendation/details.njk" %}
			</dt>
			<dd class="govuk-summary-list__actions">
				{{ stageProgressTag( applicationData.status.number, 5) }}
			</dd>
		</div>
		<div id="project-stage-{{ projectStages[6] | lower }}" class="govuk-summary-list__row">
			<dt class="govuk-summary-list__value">
				{% include "projects/project-information/includes/stages/decision/details.njk" %}
			</dt>
			<dd class="govuk-summary-list__actions">
				{{ stageProgressTag( applicationData.status.number, 6) }}
			</dd>
		</div>
		<div id="project-stage-{{ projectStages[7] | lower }}" class="govuk-summary-list__row">
			<dt class="govuk-summary-list__value">
				{% include "projects/project-information/includes/stages/post-decision/details.njk" %}
			</dt>
			<dd class="govuk-summary-list__actions">
				{{ stageProgressTag( applicationData.status.number, 7) }}
			</dd>
		</div>
	</dl>
</section>
