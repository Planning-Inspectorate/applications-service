{% extends "layouts/default.njk" %}

{% set pageTitle = "Relevant Representations | " + projectName +"" %}

{% set showResults = representations.length > 0 and showReps %}
{% set resultsNotFound = representations.length == 0 and querySearchOrTypePresent %}

{% block content %}
	<form>
		<div class="govuk-grid-row">
			<div class="govuk-grid-column-one-third">
				{% set activeId = "representations" %}
				{% set displayRepresentationsFilters = showResults %}

				{% include "projects/components/vertical-tabs-wrapper.njk" %}
			</div>

			<div class="govuk-grid-column-two-thirds">
				<span class="govuk-caption-l">
          {{ projectName }}
        </span>

				<h1 class="govuk-heading-xl">
					Relevant representations (registration comments)
				</h1>

				{% include './includes/search.njk' %}

				{% if showResults %}

					{% include './includes/results-per-page.njk' %}

					{% include './includes/results.njk' %}

					{% include './includes/pagination.njk' %}

				{% elseif resultsNotFound %}

					{% include './includes/results-not-found.njk' %}

				{% else %}

					{% include './includes/no-results.njk' %}

				{% endif %}
			</div>
		</div>
	</form>
{% endblock %}