{% extends "projects/_components/project-pages-template.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% set periodClosed = periodOpen === false %}

{% set preTitle = projectName %}
{% set title = t('register:index.heading1') %}
{% set h1Style = "govuk-heading-l" %}

{% block pageContent %}

	{% if periodClosed %}

		<p class="govuk-body">
			{{ t('register:index.registerPeriodClosed')}}
		</p>

	{% else %}

		<h2 class="govuk-body-l">
			{{ t('register:index.heading2')}} <strong>{{ projectName }}</strong>
		</h2>

		<p class="govuk-body">
			{{ t('register:index.paragraph1')}} {{ projectName }}.
		</p>

		<h3 class="govuk-heading-m">
			{{ t('register:index.heading3')}}
		</h3>

		<p class="govuk-body">
			{{ t('register:index.paragraph2')}}
		</p>

		<p class="govuk-body">
			{{ t('register:index.paragraph3')}}
		</p>

		<ul class="govuk-list govuk-list--bullet">
			<li>{{ t('register:index.listItem1')}}</li>
			<li>{{ t('register:index.listItem2')}}</li>
		</ul>

		<p class="govuk-body">
			{{ t('register:index.paragraph4')}}
		</p>

		<p class="govuk-body">
			{{ t('register:index.paragraph4')}} 23:59 on {{ closeDate }}.
		</p>

		<a href="{{ registeringForURL }}" role="button" draggable="false" class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8" data-module="govuk-button">
			{{ t('common:buttons.startNow') }}

			<svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" role="presentation" focusable="false">
				<path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
			</svg>
		</a>

		<h3 class="govuk-heading-m">{{ t('register:index.heading4')}}</h3>

		<h4 class="govuk-heading-s">
			{{ t('register:index.heading5') }}
		</h4>

		<p class="govuk-body">
			{{ t('register:index.paragraph6') }}
		</p>

		<ul class="govuk-list govuk-list--bullet">
			<li>{{ t('register:index.listItem3') }}</li>
			<li>{{ t('register:index.listItem4') }}</li>
			<li>{{ t('register:index.listItem5') }}</li>
			<li>{{ t('register:index.listItem6') }}</li>
		</ul>

		<h4 class="govuk-heading-s">
			{{ t('register:index.heading6') }}
		</h4>

		<p class="govuk-body">
			{{ t('register:index.paragraph7') }}
		</p>

		<ul class="govuk-list govuk-list--bullet">
			<li>{{ t('register:index.listItem7') }}</li>
			<li>{{ t('register:index.listItem8') }}</li>
			<li>{{ t('register:index.listItem9') }}</li>
			<li>{{ t('register:index.listItem10') }}</li>
			<li>{{ t('register:index.listItem11') }}</li>
		</ul>

		<h4 class="govuk-heading-s">
			{{ t('register:index.heading7') }}
		</h4>

		<p class="govuk-body">
			{{ t('register:index.paragraph8') }}
		</p>

		<ul class="govuk-list govuk-list--bullet">
			<li>{{ t('register:index.listItem12') }}</li>
			<li>{{ t('register:index.listItem13') }}</li>
			<li>{{ t('register:index.listItem14') }}</li>
			<li>{{ t('register:index.listItem15') }}</li>
			<li>{{ t('register:index.listItem16') }}</li>
		</ul>

	{% endif %}

