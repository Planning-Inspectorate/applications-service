{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ pageHeading }}</h1>

      <p class="govuk-body-l">
        We have sent an email to <strong>{{ email }}</strong>
      </p>

      <p class="govuk-body">
        Check your email and confirm you want to get updates about:
      </p>

      <p class="govuk-body">
        {{ projectName }}
      </p>

      <p class="govuk-body">
        The link will stop working after 48 hours.
      </p>

      {{ govukDetails({
        html: '
          <p class="govuk-body">If you have not received an email to your inbox, check your spam or junk folder.</p>
          <p class="govuk-body">If this does not work, <a class="govuk-link" href="email">request a new email notification</a>.</p>
        ',
        summaryText: "Not received an email?"
      }) }}
    </div>
  </div>

{% endblock %}