{% extends "layouts/default.njk" %}
{% from "components/wrappers/related-guides-wrapper.njk" import relatedGuidesWrapper with context %}

{% set pageTitle = '' + t('getUpdatesIndex.title1') + ' | ' + projectName + '' %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-one-third">
			{% set activeId = "get-updates" %}

			{% include "projects/_components/vertical-tabs-wrapper.njk" %}
		</div>

		<div class="govuk-grid-column-two-thirds">

			<span class="govuk-caption-l">
				{{ projectName }}
			</span>

			<h1 class="govuk-heading-xl">
				{{ t('getUpdatesIndex.heading1') }}
			</h1>

			{% if applicationData.status.number >= 7 or decisionDatePassed %}
				{% include "./_includes/cannot-signup-to-updates.njk" %}
			{% else %}
				{% include "./_includes/can-signup-to-updates.njk" %}
			{% endif %}

			<div class="visible-on visible-on--tablet">
				<hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible ">
			</div>

			{{ relatedGuidesWrapper(featureHideLink, ["visible-on visible-on--tablet"], applicationData.isMaterialChange) }}
		</div>
	</div>
{% endblock %}
