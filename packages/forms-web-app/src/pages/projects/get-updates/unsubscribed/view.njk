{% extends "layouts/default.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: t('getUpdatesUnsubscribed.panelTitle'),
        text: t('getUpdatesUnsubscribed.panelText'),
        classes: "govuk-!-margin-bottom-8"
      }) }}

      <a href="/projects/{{ caseRef }}" class="govuk-link">
        {% if isWelsh %}
          Gweld gwybodaeth prosiect {{ projectNameWelsh if projectNameWelsh else projectName }}
        {% else %}
          View {{ projectName }} project information
        {% endif %}
      </a>
    </div>
  </div>

{% endblock %}
