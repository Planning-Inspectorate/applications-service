{% macro sectionResults(results) %}
	<ul class="section-results">
		{% for result in results %}
			<li class="section-results__result">
				<a class="section-results__result-link " href="{{ result.link }}">
					<strong>
						{{ result.linkTitle }}
					</strong>
				</a>

				<div class="section-results__result-meta-data">
					<div class="section-results__result-item-two-thirds">
						<p class="section-results__result-copy">
							<strong>
								{{ result.date.text }}
							</strong>
							{{ result.date.date | date('D MMMM YYYY') }}
						</p>
					</div>

					<div class="section-results__result-item-one-third">
						<p class="section-results__result-copy">
							<strong>
								Enquiry type:
							</strong>{{ result.method }}
						</p>
					</div>
				</div>
			</li>
		{% endfor %}
	</ul>
{% endmacro %}
