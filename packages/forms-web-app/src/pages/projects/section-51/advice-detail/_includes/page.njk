{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{{ govukBackLink({
  classes: 'govuk-!-margin-top-0',
  href: backToListUrl,
  text: 'Back to list'
}) }}

{% if enquirySummaryList or enquiryText %}
  <h2 class="govuk-heading-m">
    Enquiry
  </h2>

  {% if enquirySummaryList %}
    {{ govukSummaryList({
    rows: enquirySummaryList
  }) }}
  {% endif %}

  {% if enquiryText %}
    <div class="pins-rte">
      {{ enquiryText | safe }}
    </div>
  {% endif %}
{% endif %}

{% if adviceGiven %}
  <h2 class="govuk-heading-m">
    Advice given
  </h2>

  <div class="pins-rte">
      {{ adviceGiven | safe }}
  </div>
{% endif %}

{% if attachments.length %}
  <h2 class="govuk-heading-m">
    Attachments
  </h2>

  {% for attachment in attachments %}
    <p class="govuk-body">
      <a class="govuk-link" href="{{ attachment.url }}" rel="noopener noreferrer" target="_blank">{{ attachment.text }}</a>
    </p>
  {% endfor %}
{% endif %}