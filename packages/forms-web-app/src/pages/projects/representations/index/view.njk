{% extends "layouts/default.njk" %}

{% from "components/wrappers/related-guides-wrapper.njk" import relatedGuidesWrapper %}

{% set pageTitle = "Relevant Representations | " + projectName +"" %}

{% set showResults = representations.length > 0 and showReps %}
{% set resultsNotFound = representations.length == 0 and querySearchOrTypePresent %}

{% block content %}
	<form>
		<div class="govuk-grid-row">
			<div class="govuk-grid-column-one-third">
				{% set activeId = "representations" %}
				{% set displayRepresentationsFilters = showResults %}

				{% include "projects/_components/vertical-tabs-wrapper.njk" %}
			</div>

			<div class="govuk-grid-column-two-thirds">
				<span class="govuk-caption-l">
          {{ projectName }}
        </span>

				<h1 class="govuk-heading-xl">
					Relevant representations (registration comments)
				</h1>

				{% include './_includes/search.njk' %}

				{% include "./_includes/active-filters.njk" %}

				{% if showResults %}

					{% include './_includes/results-per-page.njk' %}

					{% include './_includes/results.njk' %}

					{% include './_includes/pagination.njk' %}

				{% elseif resultsNotFound %}

					{% include './_includes/results-not-found.njk' %}

				{% else %}

					{% include './_includes/no-results.njk' %}

				{% endif %}

				<div class="visible-on visible-on--tablet">
					<hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible ">
				</div>

				{{ relatedGuidesWrapper(t, featureHideLink, ["visible-on visible-on--tablet"]) }}
			</div>
		</div>
	</form>
{% endblock %}