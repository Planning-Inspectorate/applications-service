{% extends "layouts/default.njk" %}

{% from "components/wrappers/related-guides-wrapper.njk" import relatedGuidesWrapper with context %}

{% set pageTitle = t('representationsIndex.pageTitle1') + " | "  + projectName %}

{% block content %}
	<form method="post">
		<div class="govuk-grid-row">
			<div class="govuk-grid-column-one-third">
				{% set activeId = "representations" %}
				{% set displayRepresentationsFilters = true %}

				{% include "projects/_components/vertical-tabs-wrapper.njk" %}
			</div>

			<div class="govuk-grid-column-two-thirds">
				<span class="govuk-caption-l">
					{{ projectName }}
				</span>

				<h1 class="govuk-heading-xl">
					{{ t('representationsIndex.heading1') }}
				</h1>

				{% if showRepresentations or resultsNotFound %}

					{% include './_includes/search.njk' %}

					{% include "./_includes/active-filters.njk" %}

					{% if showRepresentations %}

						{% include './_includes/results-per-page.njk' %}

						{% include './_includes/results.njk' %}

						{% include './_includes/pagination.njk' %}

					{% else %}

						{% include './_includes/results-not-found.njk' %}

					{% endif %}

				{% elseif hasNoResultsPostDecision %}

					{% include './_includes/no-results-post-decision.njk' %}

				{% else %}

					{% include './_includes/no-results-pre-decision.njk' %}

				{% endif %}

				<div class="visible-on visible-on--tablet">
					<hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible ">
				</div>

				{{ relatedGuidesWrapper(featureHideLink, ["visible-on visible-on--tablet"], applicationData.isMaterialChange) }}
			</div>
		</div>
	</form>
{% endblock %}
