<section>
	<h2 class="govuk-heading-m">
		{{ t('projectsIndex.projectStage.heading1') }}
	</h2>

	{% if applicationData.status.text === projectStages[8] %}

		{% include "./stages/withdrawn/description.njk" %}

	{% else %}

		<p class="govuk-body">
			{{ t('projectsIndex.projectStage.paragraph1', { stage: '<strong>' + t("projectsIndex.projectStage.stage" + applicationData.status.number + "name" ) | lower + '</strong>' }) | safe }}
		</p>

		{% if applicationData.status.text === projectStages[1] %}
			{% include "./stages/pre-application/description.njk" %}
		{% endif %}

		{% if applicationData.status.text === projectStages[2] %}
			{% include "./stages/acceptance/description.njk" %}
		{% endif %}

		{% if applicationData.status.text === projectStages[3] %}
			{% include "./stages/pre-examination/description.njk" %}
		{% endif %}

		{% if applicationData.status.text === projectStages[4] %}
			{% include "./stages/examination/description.njk" %}
		{% endif %}

		{% if applicationData.status.text === projectStages[5] %}
			{% include "./stages/recommendation/description.njk" %}
		{% endif %}

		{% if applicationData.status.text === projectStages[6] %}
			{% include "./stages/decision/description.njk" %}
		{% endif %}

		{% if applicationData.status.text === projectStages[7] %}
			{% include "./stages/post-decision/description.njk" %}
		{% endif %}

		<div id="project-stage-{{ projectStages[1] | lower }}" class="govuk-!-margin-top-6">
			{% include "./stages/pre-application/details.njk" %}
		</div>
		<div id="project-stage-{{ projectStages[2] | lower }}">
			{% include "./stages/acceptance/details.njk" %}
		</div>
		<div id="project-stage-{{ projectStages[3] | lower }}">
				{% include "./stages/pre-examination/details.njk" %}
		</div>
		<div id="project-stage-{{ projectStages[4] | lower }}">
				{% include "./stages/examination/details.njk" %}
		</div>
		<div id="project-stage-{{ projectStages[5] | lower }}">
				{% include "./stages/recommendation/details.njk" %}
		</div>
		<div id="project-stage-{{ projectStages[6] | lower }}">
				{% include "./stages/decision/details.njk" %}
		</div>
		<div id="project-stage-{{ projectStages[7] | lower }}">
				{% include "./stages/post-decision/details.njk" %}
		</div>

	{% endif %}
</section>