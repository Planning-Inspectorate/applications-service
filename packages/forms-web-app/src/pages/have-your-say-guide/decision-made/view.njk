{% extends "layouts/default.njk" %}

{% from "components/ui/next-step.njk" import uiNextStep %}

{% block pageTitle %}
	{{ t('haveYourSayGuide.common.haveYourSayGuide') }} - {{ haveYourSayGuide.activeStep.title }}
{% endblock %}

{% block content %}
	<h1 class="govuk-heading-xl">
		{{ haveYourSayGuide.activeStep.title }}
	</h1>

	<h2 class="style-contents-list-title govuk-heading-s">
		{{ t('common.contents') }}
	</h2>

	<ol class="govuk-list style-contents-list">
		<li>
			<a class="govuk-link" href="#after-the-decision-is-made">{{ t('haveYourSayGuideDecisionMade.heading2') }}</a>
		</li>
	</ol>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<div class="pins-step-by-step-section-main govuk-!-padding-top-4" style="border-top: 1px solid #707070;">
				<h2 class="govuk-heading-m" id="after-the-decision-is-made">
					{{ t('haveYourSayGuideDecisionMade.heading2') }}
				</h2>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDecisionMade.paragraph1') }}
				</p>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDecisionMade.paragraph2', { link: '<a class="govuk-link" target="_blank" rel="noopener noreferrer" href="' + govUK.administrativeCourtURL + '">' + t('haveYourSayGuideDecisionMade.paragraph2LinkText') + '</a>' }) | safe }}
				</p>
			</div>
		</div>

		<div class="govuk-grid-column-one-third">
			{% include "have-your-say-guide/_includes/have-your-say-guide-steps.njk" %}
		</div>
	</div>
{% endblock %}