{% extends "layouts/default.njk" %}

{% from "components/ui/next-step.njk" import uiNextStep %}

{% block pageTitle %}
	{{ t('haveYourSayGuide.common.haveYourSayGuide') }} - {{ haveYourSayGuide.activeStep.title }}
{% endblock %}

{% block content %}
	<h1 class="govuk-heading-xl">
		{{ haveYourSayGuide.activeStep.title }}
	</h1>

	<h2 class="style-contents-list-title govuk-heading-s">
		{{ t('common.contents') }}
	</h2>

	<ol class="govuk-list style-contents-list">
		<li>
			<a class="govuk-link" href="#about-the-preliminary-meeting">{{ t('haveYourSayGuideGetInvolved.heading2') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#attending-the-preliminary-meeting">{{ t('haveYourSayGuideGetInvolved.heading3') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#what-happens-next">{{ t('haveYourSayGuideGetInvolved.heading4') }}</a>
		</li>
	</ol>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<div class="pins-step-by-step-section-main govuk-!-padding-top-4" style="border-top: 1px solid #707070;">
				<h2 class="govuk-heading-m" id="about-the-preliminary-meeting">
					{{ t('haveYourSayGuideGetInvolved.heading2') }}
				</h2>

				<p class="govuk-body">
					{{ t('haveYourSayGuideGetInvolved.paragraph1') }}
				</p>

				<p class="govuk-body">
					{{ t('haveYourSayGuideGetInvolved.paragraph2') }}
				</p>

				<h2 class="govuk-heading-m" id="attending-the-preliminary-meeting">
					{{ t('haveYourSayGuideGetInvolved.heading3') }}
				</h2>

				<p class="govuk-body">
					{{ t('haveYourSayGuideGetInvolved.paragraph3') }}
				</p>

				<ul class="govuk-list govuk-list--bullet">
					<li>{{ t('haveYourSayGuideGetInvolved.listItem1') }}</li>
					<li>{{ t('haveYourSayGuideGetInvolved.listItem2') }}</li>
				</ul>

				<p class="govuk-body">
					{{ t('haveYourSayGuideGetInvolved.paragraph4') }}
				</p>

				<p class="govuk-body">
					{{ t('haveYourSayGuideGetInvolved.paragraph5') }}
				</p>

				<p class="govuk-body">
					{{ t('haveYourSayGuideGetInvolved.paragraph6') }}
				</p>

				<ul class="govuk-list govuk-list--bullet">
					<li>{{ t('haveYourSayGuideGetInvolved.listItem3') }}</li>
					<li>{{ t('haveYourSayGuideGetInvolved.listItem4') }}</li>
					<li>{{ t('haveYourSayGuideGetInvolved.listItem5') }}</li>
					<li>{{ t('haveYourSayGuideGetInvolved.listItem6') }}</li>
				</ul>

				<h2 class="govuk-heading-m" id="what-happens-next">
					{{ t('haveYourSayGuideGetInvolved.heading4') }}
				</h2>

				<p class="govuk-body">
					{{ t('haveYourSayGuideGetInvolved.paragraph7') }}
				</p>

				<p class="govuk-body">
					{{ t('haveYourSayGuideGetInvolved.paragraph8') }}
				</p>

				{{ uiNextStep(haveYourSayGuide.activeStep.nextStepURL, haveYourSayGuide.activeStep.nextStepTitle, t('common.next')) }}
			</div>
		</div>

		<div class="govuk-grid-column-one-third">
			{% include "have-your-say-guide/_includes/have-your-say-guide-steps.njk" %}
