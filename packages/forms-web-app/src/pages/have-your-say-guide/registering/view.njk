{% extends "layouts/default.njk" %}

{% from "components/ui/next-step.njk" import uiNextStep %}

{% block pageTitle %}
	{{ t('haveYourSayGuide.common.haveYourSayGuide') }} - {{ haveYourSayGuide.activeStep.title }}
{% endblock %}

{% block content %}
	<h1 class="govuk-heading-xl">
		{{ haveYourSayGuide.activeStep.title }}
	</h1>

	<h2 class="style-contents-list-title govuk-heading-s">
		{{ t('common.contents') }}
	</h2>

	<ol class="govuk-list style-contents-list">
		<li>
			<a class="govuk-link" href="#who-can-register">{{ t('registering.heading2') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#when-to-register">{{ t('registering.heading3') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#what-you-need-to-register">{{ t('registering.heading4') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#after-you-have-registered">{{ t('registering.heading5') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#register-to-have-your-say">{{ t('registering.heading6') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#more-detailed-advice">{{ t('registering.heading7') }}</a>
		</li>
	</ol>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<div class="pins-step-by-step-section-main govuk-!-padding-top-4" style="border-top: 1px solid #707070;">
				<h2 class="govuk-heading-m" id="who-can-register">
					{{ t('registering.heading2') }}
				</h2>

				<p class="govuk-body">
					{{ t('registering.paragraph1') }}
				</p>

				<ul class="govuk-list govuk-list--bullet">
					<li>{{ t('registering.listItem1') }}</li>
					<li>{{ t('registering.listItem2') }}</li>
					<li>{{ t('registering.listItem3') }}</li>
					<li>{{ t('registering.listItem4') }}</li>
				</ul>

				<h2 class="govuk-heading-m" id="when-to-register">
					{{ t('registering.heading3') }}
				</h2>

				<p class="govuk-body">
					{{ t('registering.paragraph2') }}
				</p>

				<p class="govuk-body">
					{{ t('registering.paragraph3') }}
				</p>

				<h2 class="govuk-heading-m" id="what-you-need-to-register">
					{{ t('registering.heading4') }}
				</h2>

				<p class="govuk-body">
					{{ t('registering.paragraph4') }}
				</p>

				<ul class="govuk-list govuk-list--bullet">
					<li>{{ t('registering.listItem5') }}</li>
					<li>{{ t('registering.listItem6') }}</li>
					<li>{{ t('registering.listItem7') }}</li>
				</ul>

				<p class="govuk-body">
					{{ t('registering.paragraph5', { link: '<a class="govuk-link" target="_blank" rel="noopener noreferrer" href="' + pinsPrivacyNoticeUrl + '">' + t('registering.paragraph5LinkText') + '</a>' }) | safe }}
				</p>

				<p class="govuk-body">
					{{ t('registering.paragraph6') }}
				</p>

				<h2 class="govuk-heading-m" id="after-you-have-registered">
					{{ t('registering.heading5') }}
				</h2>

				<p class="govuk-body">
					{{ t('registering.paragraph7') }}
				</p>

				<p class="govuk-body">
					{{ t('registering.paragraph8') }}
				</p>

				<h2 class="govuk-heading-m" id="register-to-have-your-say">
					{{ t('registering.heading6') }}
				</h2>

				<p class="govuk-body">
					{{ t('registering.paragraph9') }}
				</p>

				<h2 class="govuk-heading-m" id="more-detailed-advice">
					{{ t('registering.heading7') }}
				</h2>

				<p class="govuk-body">
					{{ t('registering.paragraph10') }}
				</p>

				<p class="govuk-body">
					<a class="govuk-link" target="_blank" rel="noopener noreferrer" href="{{ pinsURL.adviceNotes }}">{{ t('registering.linkText1') }}</a>
				</p>

				{{ uiNextStep(haveYourSayGuide.activeStep.nextStepURL, haveYourSayGuide.activeStep.nextStepTitle, t('common.next')) }}
			</div>
		</div>

		<div class="govuk-grid-column-one-third">
			{% include "have-your-say-guide/_includes/have-your-say-guide-steps.njk" %}
		</div>
	</div>
{% endblock %}