{% extends "layouts/default.njk" %}

{% set templateID = 'main' %}

{% block script %}
	{% set initiateScriptsConfig = (initiateScriptsConfig.push({
		callback: "
			var $element = document.querySelector('#step-by-step-navigation')
    	var stepByStepNavigation = new GOVUK.Modules.AppStepNav($element).init()
    ",
		src: "/public/scripts/step-by-step-navigation.script.js"
	}), initiateScriptsConfig) %}
{% endblock %}

{% block pageTitle %}
	{{ t('haveYourSayGuide.common.haveYourSayGuide') }} - {{ t('haveYourSayGuide.index.heading1') }}
{% endblock %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<h1 class="govuk-heading-xl">
				{{ t('haveYourSayGuide.index.heading1') }}
			</h1>

			<p class="govuk-body">
				{{ t('haveYourSayGuideIndex.paragraph1') }}
			</p>

			<p class="govuk-body">
				{{ t('haveYourSayGuideIndex.paragraph2') }}
			</p>

			<ul class="govuk-list govuk-list--bullet">
				<li>{{ t('haveYourSayGuideIndex.listItem1') }}</li>
				<li>{{ t('haveYourSayGuideIndex.listItem2') }}</li>
				<li>{{ t('haveYourSayGuideIndex.listItem3') }}</li>
				<li>{{ t('haveYourSayGuideIndex.listItem4') }}</li>
				<li>{{ t('haveYourSayGuideIndex.listItem5') }}</li>
			</ul>

			<p class="govuk-body">
				{{ t('haveYourSayGuideIndex.paragraph3') }}
			</p>

			<p class="govuk-body">
				{{ t('haveYourSayGuideIndex.paragraph4') }}
			</p>

			<p class="govuk-body">
				<a class="govuk-link" href="{{ projectSearchURL }}">{{ t('haveYourSayGuideIndex.linkText1') }}</a>
			</p>

			{% include "have-your-say-guide/_includes/have-your-say-guide-steps.njk" %}
		</div>
	</div>
{% endblock %}