{% extends "layouts/default.njk" %}

{% from "components/ui/next-step.njk" import uiNextStep %}

{% block pageTitle %}
	{{ t('haveYourSayGuide.common.haveYourSayGuide') }} - {{ haveYourSayGuide.activeStep.title }}
{% endblock %}

{% block content %}
	<h1 class="govuk-heading-xl">
		{{ haveYourSayGuide.activeStep.title }}
	</h1>

	<h2 class="style-contents-list-title govuk-heading-s">
		{{ t('common.contents') }}
	</h2>

	<ol class="govuk-list style-contents-list">
		<li>
			<a class="govuk-link" href="#what-examination-means">{{ t('haveYourSayGuideDuringExamination.heading2') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#how-to-comment-during-examination">{{ t('haveYourSayGuideDuringExamination.heading3') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#if-you-have-missed-the-deadline-to-register">{{ t('haveYourSayGuideDuringExamination.heading4') }}</a>
		</li>
		<li>
			<a class="govuk-link" href="#more-detailed-advice">{{ t('haveYourSayGuideDuringExamination.heading5') }}</a>
		</li>
	</ol>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<div class="pins-step-by-step-section-main govuk-!-padding-top-4" style="border-top: 1px solid #707070;">
				<h2 id="what-examination-means" class="govuk-heading-m">
					{{ t('haveYourSayGuideDuringExamination.heading2') }}
				</h2>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDuringExamination.paragraph1') }}
				</p>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDuringExamination.paragraph2') }}
				</p>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDuringExamination.paragraph3') }}
				</p>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDuringExamination.paragraph4') }}
				</p>

				<h2 id="how-to-comment-during-examination" class="govuk-heading-m">
					{{ t('haveYourSayGuideDuringExamination.heading3') }}
				</h2>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDuringExamination.paragraph5') }}
				</p>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDuringExamination.paragraph6') }}
				</p>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDuringExamination.paragraph7') }}
				</p>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDuringExamination.paragraph8', { link: '<a class="govuk-link" target="_blank" rel="noopener noreferrer" href="' + pinsPrivacyNoticeUrl + '">' + t('haveYourSayGuideDuringExamination.paragraph8LinkText') + '</a>' }) | safe }}
				</p>

				<h2 id="if-you-have-missed-the-deadline-to-register" class="govuk-heading-m">
					{{ t('haveYourSayGuideDuringExamination.heading4') }}
				</h2>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDuringExamination.paragraph9') }}
				</p>

				<h2 id="more-detailed-advice" class="govuk-heading-m">
					{{ t('haveYourSayGuideDuringExamination.heading5') }}
				</h2>

				<p class="govuk-body">
					{{ t('haveYourSayGuideDuringExamination.paragraph10') }}
				</p>

				<p class="govuk-body">
					<a class="govuk-link" target="_blank" rel="noopener noreferrer" href="{{ pinsURL.adviceNotes }}">{{ t('haveYourSayGuideDuringExamination.linkText1') }}</a>.
				</p>

				{{ uiNextStep(haveYourSayGuide.activeStep.nextStepURL, haveYourSayGuide.activeStep.nextStepTitle, t('common.next')) }}
			</div>
		</div>

		<div class="govuk-grid-column-one-third">
			{% include "have-your-say-guide/_includes/have-your-say-guide-steps.njk" %}
		</div>
	</div>
{% endblock %}