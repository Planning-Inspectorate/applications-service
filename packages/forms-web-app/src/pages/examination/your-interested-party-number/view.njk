{% extends "layouts/default.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% set pageTitle = t('examination.yourInterestedPartyNumber.pageTitle1') %}

{% block content %}
	{% if errorSummary %}
		{{ govukErrorSummary({
			titleText: t('common.thereIsAProblem'),
			errorList: errorSummary
		}) }}
	{% endif %}

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<form action="" method="POST" novalidate>
				{{ govukInput({
					attributes: { "data-cy": id },
					label: {
							text: t('examination.yourInterestedPartyNumber.pageTitle1'),
							classes: "govuk-label--l",
							isPageHeading: true
					},
					id: id,
					name: id,
					autocomplete: 'name',
					value: interestedPartyNumber or errors[id].value,
					errorMessage: errors[id] and {
						text: errors[id].msg
					}
				}) }}

				{{ govukButton({
					attributes: { "data-cy": "button-submit-and-continue"},
					text: t('common.continue'),
					type: "Submit"
				}) }}
			</form>
		</div>
	</div>
{% endblock %}