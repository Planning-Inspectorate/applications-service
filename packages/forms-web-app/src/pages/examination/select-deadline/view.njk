{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set pageTitle = t("examination.selectDeadline.title") %}

{% block content %}
  {% if errorSummary %}
    {{ govukErrorSummary({
      titleText: t("common.thereIsAProblem"),
      errorList: errorSummary
    }) }}
  {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="" method="POST" novalidate>
        {{ govukRadios({
          attributes: { "data-cy": id },
          idPrefix: id,
          name: id,
          errorMessage: errors[id] and {
            text: errors[id].msg
          },
          fieldset: {
            legend: {
              text: t("examination.selectDeadline.heading1"),
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            text: t("examination.selectDeadline.hintText1")
          },
          items: options
        }) }}

        {{ govukButton({
          attributes: { "data-cy": "button-submit-and-continue" },
          text: t("common.continue"),
          type: "Submit"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}