{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set pageTitle = t('examination.personalInformation.title') %}

{% set hintHtml %}
<span>{{ t('examination.personalInformation.paragraph1') }}</span>
<ul>
  <li>{{ t('examination.personalInformation.listItem1') }}</li>
  <li>{{ t('examination.personalInformation.listItem2') }}</li>
  <li>{{ t('examination.personalInformation.listItem3') }}</li>
</ul>
<span>{{ t('examination.personalInformation.paragraph2') }}</span>
<ul>
  <li>{{ t('examination.personalInformation.listItem4') }}</li>
  <li>{{ t('examination.personalInformation.listItem5') }}</li>
  <li>{{ t('examination.personalInformation.listItem6') }}</li>
  <li>{{ t('examination.personalInformation.listItem7') }}</li>
  <li>{{ t('examination.personalInformation.listItem8') }}</li>
  <li>{{ t('examination.personalInformation.listItem9') }}</li>
  <li>{{ t('examination.personalInformation.listItem10') }}</li>
  <li>{{ t('examination.personalInformation.listItem11') }}</li>
  <li>{{ t('examination.personalInformation.listItem12') }}</li>
</ul>
{% endset %}

{% block content %}
  {% if errorSummary %}
    {{ govukErrorSummary({
      titleText: t("common.thereIsAProblem"),
      errorList: errorSummary
    }) }}
  {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">
        {{ submissionItemTitle }}
      </span>

      <form action="" method="POST" novalidate>
        {{ govukRadios({
          attributes: { "data-cy": id },
          classes: "govuk-radios--inline",
          idPrefix: id,
          name: id,
          errorMessage: errors[id] and {
            text: errors[id].msg
          },
          fieldset: {
            legend: {
              text: t('examination.personalInformation.heading1'),
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            html: hintHtml
          },
          items: options
        }) }}

        {{ govukButton({
          attributes: { "data-cy": "button-submit-and-continue" },
          text: t("common.continue"),
          type: "Submit"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}