{% extends "layouts/default.njk" %}

{% set pageTitle = t("examination.submissionError.title") %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<h1 class="govuk-heading-l">
				{{ t("examination.submissionError.heading1") }}
			</h1>

			<p class="govuk-body">
				{{ t("examination.submissionError.paragraph1") }}
			</p>

			<p class="govuk-body">
				{{ t("examination.submissionError.paragraph2") }}
			</p>

			<p class="govuk-body">
				{{ t("examination.submissionError.paragraph3", { link: '<a class="govuk-link" href="' + submitCommentsURL + '" data-cy="submit-comments">' + t("examination.submissionError.paragraph3LinkText")  + '</a>' }) | safe }}
			</p>

			<h2 class="govuk-heading-s">
				{{ t("common.telephone") }}
			</h2>

			<p class="govuk-body">
				{{ t("examination.submissionError.paragraph4") }}
			</p>

			<ul class="govuk-list">
				<li>{{ t('common.telephone') }}: {{ pinsContactDetails.supportTeamPhoneNumber }}</li>
				<li>{{ t("common.pinsContactDetails.csOpeningHours") }}</li>
			</ul>

			<h2 class="govuk-heading-s">
				{{ t("common.email") }}
			</h2>

			<p>
				<a class="govuk-link" data-cy="project-enquiries" href="mailto:{{ projectEmail }}" aria-label="{{ t("examination.submissionError.ariaLabel1") }}">{{ projectEmail }}</a>
			</p>

			<p>
				{{ t("examination.submissionError.paragraph5") }}
			</p>
		</div>
	</div>
{% endblock %}