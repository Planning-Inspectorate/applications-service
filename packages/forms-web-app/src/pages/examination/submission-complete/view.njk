{% extends "layouts/default.njk" %}

{% set pageTitle = t("examination.submissionComplete.title") %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<div class="govuk-panel govuk-panel--confirmation">
				<h1 class="govuk-panel__title">
					{{ t("examination.submissionComplete.heading1") }}
				</h1>

				<div class="govuk-panel__body">
					{{ t("examination.submissionComplete.notificationText1") }}
					<br>
					<strong>{{ submissionId }}</strong>
				</div>
			</div>

			<p class="govuk-body">
				{{ t("examination.submissionComplete.paragraph1") }}
			</p>

			<h2 class="govuk-heading-m">
				{{ t("examination.submissionComplete.heading2") }}
			</h2>

			<h3 class="govuk-heading-s">
				{{ t("examination.submissionComplete.heading3") }}
			</h3>

			<p class="govuk-body">
				{{ t("examination.submissionComplete.paragraph2") }}
			</p>

			<p class="govuk-body">
				{{ t('common.telephone') }}: {{ pinsContactDetails.supportTeamPhoneNumber }}
				<br>
				{{ t('common.pinsContactDetails.csOpeningHours') }}
			</p>

			<h3 class="govuk-heading-s">
				{{ t("examination.submissionComplete.heading4") }}
			</h3>

			<p class="govuk-body">
				<a id="project-email-link" href="{{ projectEmail }}" class="govuk-link">
					{{ projectEmail }}
				</a>
			</p>

			<p class="govuk-body">
				{{ t("examination.submissionComplete.paragraph3") }}
			</p>

			<p class="govuk-body">
				{{ t("examination.submissionComplete.paragraph4") }}
			</p>

			<h3 class="govuk-heading-s">
				{{ t("examination.submissionComplete.heading5") }}
			</h3>

			<p class="govuk-body">
				{{ t("examination.submissionComplete.paragraph5") }}
			</p>

			<p class="govuk-body">
				{{ t("examination.submissionComplete.paragraph6", { link: '<a href="' + serviceFeedbackUrl + '" class="govuk-link">' + t("examination.submissionComplete.paragraph6LinkText") + '</a>' }) | safe }}
			</p>
		</div>
	</div>
{% endblock %}