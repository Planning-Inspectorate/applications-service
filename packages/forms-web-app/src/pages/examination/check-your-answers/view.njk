{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% set pageTitle = t("examination.checkYourAnswers.title") %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">{{ deadlineTitle }}</span>

      <h1 class="govuk-heading-l">{{ t("examination.checkYourAnswers.heading1") }}</h1>

      <h2 class="govuk-heading-m">{{ t("examination.checkYourAnswers.details.heading1") }}</h2>

      {{ govukSummaryList({
        classes: 'govuk-!-margin-bottom-9',
        rows: summaryListDetails
      }) }}

      <h2 class="govuk-heading-m">{{ t("examination.checkYourAnswers.submissions.heading1") }}</h2>

      {{ govukSummaryList({
        classes: 'govuk-!-margin-bottom-9',
        rows: summaryListSubmissionItems
      }) }}

      <div class="visible-on visible-on--js-enabled">
        {{ govukWarningText({
          iconFallbackText: t("common.warning"),
          text: t("examination.checkYourAnswers.warningText1")
        }) }}

        <a class="govuk-button" href="{{ nextPageUrl }}">
          {{ t("common.submit") }}
        </a>
      </div>

      <noscript>
        {{ govukWarningText({
          iconFallbackText: t("common.warning"),
          text: t("examination.checkYourAnswers.warningText2")
        }) }}

        <a class="govuk-button" href="{{ nextPageUrl }}">
          {{ t("common.continue") }}
        </a>
      </noscript>
    </div>
  </div>
{% endblock %}