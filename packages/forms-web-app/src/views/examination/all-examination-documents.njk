{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  {{ appData.ProjectName }}
{% endblock %}

{% block content %}

  <div class="govuk-width-container">
    <main class="govuk-main-wrapper">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds govuk-!-margin-bottom-5">
          <h1 class="govuk-heading-xl">{{ projectName }}</h1>
        </div>
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-quarter">
          {% set current = 'all-examination-documents' %}
          {% include "layouts/vertical-tabs.njk" %}
        </div>
        <div class="govuk-grid-column-three-quarters">
          <h2 class="govuk-heading-m">All examination documents</h2>
          <p class="govuk-body">There are no documents to display at the moment. These documents will be published at the Examination stage.</p>
          <p class="govuk-body">
            <a href="/examination/{{ caseRef }}" class="govuk-link">Return to the project overview</a>
          </p>
        </div>
      </main>
    </div>

  {% endblock %}
