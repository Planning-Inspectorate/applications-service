{% extends "layouts/layout.njk" %}

{% block pageTitle %}
    {{ projectName }} project overview
{% endblock %}

{% block beforeContent %}
    <div class="project-section">
        <div class="project-header">
            {{ govukPhaseBanner({
        tag: {
          text: "beta"
        },
        html: 'This is a new service â€“ your <a class="govuk-link " href="#">feedback</a> will help us to improve it.'
      })
    }}
            <p class="govuk-heading-xl govuk-!-padding-top-9 govuk-!-padding-bottom-9" >{{ projectName }}</p>
        </div>
    </div>
{% endblock %}

{% block content %}

    <div class="project-header-flex-container">
        <main class="govuk-main-wrapper">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-quarter">
                    {% set current = 'project-timeline' %}
                    {% include "layouts/vertical-tabs.njk" %}
                </div>
                <div class="govuk-grid-column-three-quarters">
                    <h2 class="govuk-heading-m">Project timeline</h2>
                    <p class="govuk-body">There are notimeline to display at the moment. These timelines will be published at the Recommendation and decision stage.</p>
                    <p class="govuk-body">
                        <a href="/examination/{{ caseRef }}" class="govuk-link">Return to the project overview</a>
                    </p>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
{% block pageScripts %}{% endblock %}