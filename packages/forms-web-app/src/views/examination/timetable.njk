{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  {{ appData.ProjectName }}
{% endblock %}

{% block beforeContent %}
  <div class="project-section">
    <div class="project-header">
      {{ govukPhaseBanner({
        tag: {
          text: "beta"
        },
        html: 'This is a new service â€“ your <a class="govuk-link " href="#">feedback</a> will help us to improve it.'
      })
    }}
      <p class="govuk-heading-xl govuk-!-padding-top-9 govuk-!-padding-bottom-9" >{{ projectName }}</p>
    </div>
  </div>
{% endblock %}

{% block content %}

  <div class="project-header-flex-container">
    <main class="govuk-main-wrapper">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-quarter">
          {% set current = 'timetable' %}
          {% include "layouts/vertical-tabs.njk" %}
        </div>

        <div class="govuk-grid-column-three-quarters">

          <h2 class="govuk-heading-m">Examination timetable</h2>
          <p class="govuk-body">Currently there are no events to display. The examination timetable will be published at the Examination stage.</p>
          <p class="govuk-body">
            <a href="/examination/{{ caseRef }}" class="govuk-link">Return to the project overview</a>
          </p>
        </div>
      </div>
    </main>
  </div>

{% endblock %}