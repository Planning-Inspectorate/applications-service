{% macro layoutSections(sections) %}
  {% for section in sections %}
    {% if section.active %}
      {% if section.hasRule %}
        <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible" />
      {% else %}
        <br />
      {% endif %}

      <section>
        {% if section.title %}
          <h3 class="govuk-heading-m">
            {{ section.title }}
          </h3>
        {% endif %}

        {% if section.content %}
          {{ section.content | safe }}
        {% endif %}
      </section>

      {% if loop.last %}
        <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible" />
      {% endif %}
    {% endif %}
  {% endfor %}
{% endmacro %}
