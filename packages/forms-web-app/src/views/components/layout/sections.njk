{% macro layoutSections(sections) %}
  {% for section in sections %}
    {% if section.active %}
      {% if section.hasRule %}
        <hr class="govuk-!-margin-top-8 govuk-section-break govuk-section-break--visible" />
      {% endif %}

      <section {% if section.hasRule %}class="govuk-!-padding-top-8"{% endif %} {% if section.id %}id="{{ section.id }}"{% endif %}>
        {% if section.hasRule === false %}
          <br />
        {% endif %}

        {% if section.title %}
          <h3 class="govuk-heading-m">
            {{ section.title }}
          </h3>
        {% endif %}

        {% if section.content %}
          {{ section.content | safe }}
        {% endif %}
      </section>

      {% if loop.last %}
        <hr class="govuk-!-margin-top-8 govuk-section-break govuk-section-break--visible" />
      {% endif %}
    {% endif %}
  {% endfor %}
{% endmacro %}
