{% from "govuk/components/skip-link/macro.njk" import govukSkipLink %}

{% macro pinsHeaderLayout(title) %}
  {% block skipLink %}{% endblock %}

  <header role="banner">
    {{ govukSkipLink({
      href: '#main-content',
      text: 'Skip to main content'
    }) }}

    <div class="pins-header">
      <div class="govuk-width-container">
        {% include "components/core/pins-logo.njk" %}

        {% if title %}
          <span class="pins-header__title">
            <strong>
              {{ title }}
            </strong>
          </span>
        {% endif %}
      </div>
    </div>
  </header>
{% endmacro %}
