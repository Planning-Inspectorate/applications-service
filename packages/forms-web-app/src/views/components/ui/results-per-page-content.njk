{% macro uiResultsPerPageContent(size, link, active) %}
	{% if active %}
		<input type="hidden" name="itemsPerPage" value="{{ size }}" />
		{{ size }}
	{% else %}
		<a href="{{ link }} " class="govuk-link"
			 aria-label="view {{ size }} results per page"
		>
			{{ size }}</a>
	{% endif %}
{% endmacro %}
