{% macro uiVerticalTabs(title, activeId, tabs, ariaLabel, headingLevel = 'span') %}
  <nav
    aria-label="{{ ariaLabel }}"
    class="ui-vertical-tabs"
  >
    {% if title %}
      <{{ headingLevel }} class="ui-vertical-tabs__title">
        {{ title }}
      </{{ headingLevel }}>
    {% endif %}

    <ul class="ui-vertical-tabs__list">
      {% for tab in tabs %}
        {% if not tab.hidden %}
          <li class="ui-vertical-tabs__list-item">
            {% if tab.id === activeId %}
              <span class="ui-vertical-tabs__list-item-text ui-vertical-tabs__list-item-text--active">
                <strong>
                  {{ tab.name }}
                </strong>
              </span>
            {% else %}
              {% set target = "_self" %}

              {% if tab.target %}
                {% set target = tab.target %}
              {% endif %}
              <a
                class="ui-vertical-tabs__list-item-text ui-vertical-tabs__list-item-text--link"
                href="{{ tab.url }}"
                target="{{ target }}"
              >
                {{ tab.name }}
              </a>
            {% endif %}
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </nav>
{% endmacro %}
