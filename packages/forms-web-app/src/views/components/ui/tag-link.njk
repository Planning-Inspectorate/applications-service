{% macro uiTagLink(tag) %}
  <a
    alt="{{ tag.alt }}"
    class="ui-tag-link -not-default"
    href="{{ tag.link }}"
  >
    {% if tag.icon == 'close' %}
      <span class="ui-tag-link__close-icon"></span>
    {% endif %}

    <span class="ui-tag-link__text">{{ tag.text }}</span>
  </a>
{% endmacro %}
