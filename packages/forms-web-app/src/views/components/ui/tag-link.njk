{% macro uiTagLink(tag) %}
  <a
    class="ui-tag-link"
    data-cy="ui-tag-link"
    href="{{ tag.link }}"
  >
    {% if tag.icon == 'close' %}
      <span class="ui-tag-link__close-icon"></span>
    {% endif %}

    <span class="ui-tag-link__text">{{ tag.textHtml | safe }}</span>
  </a>
{% endmacro %}
