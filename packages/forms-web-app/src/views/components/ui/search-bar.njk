{% from "govuk/components/button/macro.njk" import govukButton %}

{% macro uiSearchBar(id, inputId, value, label) %}
  <div class="ui-search-bar" id="{{ id }}">
    <div class="ui-search-bar__section ui-search-bar__section--input">
      <label class="ui-search-bar__label" for="{{ inputId }}">
        {{ label }}
      </label>

      <input
        class="ui-search-bar__input"
        id="{{ inputId }}"
        name="{{ inputId }}"
        type="search"
        value="{{ value }}"
      >
    </div>

    <div class="ui-search-bar__section ui-search-bar__section--submit">
      {{ govukButton({
        attributes: { "data-cy": "search-button", "enterkeyhint": "search", "id": "search-button" },
        classes: "ui-search-bar__submit",
        text: "Search",
        type: "submit"
      }) }}
    </div>
  </div>
{% endmacro %}
