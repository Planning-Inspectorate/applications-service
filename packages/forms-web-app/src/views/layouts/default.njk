{% extends "govuk/template.njk" %}

{% set htmlLang = language %}

{%- set initiateScriptsConfig = [{ src: "/public/scripts/index.script.js" }] -%}

{% set imagePath = '/public' %}

{% block pageTitle %}
	{% if errors %}
		{% set pageTitle = t('common.error') + ": " + pageTitle %}
	{% endif %}

	{{ pageTitle }}
{% endblock %}

{# Note this block can be removed as well as the relevent images in /public/images when updating to v5 of the govuk-frontend node module #}
{% block headIcons %}
	<link rel="icon" sizes="48x48" href="{{ imagePath }}/images/favicon.ico">
	<link rel="icon" sizes="any" href="{{ imagePath }}/images/favicon.svg" type="image/svg+xml">
	<link rel="mask-icon" href="{{ imagePath }}/images/govuk-icon-mask.svg" color="{{ themeColor | default("#0b0c0c") }}"> {#- Hardcoded value of $govuk-black #}
	<link rel="apple-touch-icon" href="{{ imagePath }}/images/govuk-icon-180.png">
	<link rel="manifest" href="{{ imagePath }}/manifest.json">
{% endblock %}

{% block head %}
	{% include "includes/head.njk" %}

	{% block stylesheet %}{% endblock %}
{% endblock %}

{% block bodyStart %}
	{% include "includes/gtm-no-script.njk" %}

	{% include "includes/cookie-banner.njk" %}
{% endblock %}

{% block skipLink %}{% endblock %}

{% block header %}
	{% include "includes/header.njk" %}
{% endblock %}

{% block main %}
	{{ super() }}
{% endblock %}

{% block footer %}
	{% include "components/core/pins-footer.njk" %}
{% endblock %}

{% block bodyEnd %}
	{% block script %}{% endblock %}

	{% include "includes/initiate-scripts.njk" %}

	{# If backLinkUrl has a value of '#' the link is handled by JavaScript #}
	{% if backLinkUrl == '#' %}
		<script {% if cspNonce %} nonce={{ cspNonce }} {% endif %}>
			const link = document.getElementById('back-link')

			function handleLink(event) {
				event.preventDefault();
				history.back()
			}

			if (link) {
				link.addEventListener('click', handleLink)
			}

			window.removeEventListener('unload', () => {
				link.removeEventListener('click', handleLink);
				handleRemoveUnload()
				return
			});
		</script>
	{% endif %}
{% endblock %}
