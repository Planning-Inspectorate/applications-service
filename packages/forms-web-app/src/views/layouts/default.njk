{% extends "govuk/template.njk" %}

{% from "components/core/pins-header-default.njk" import pinsHeaderDefault %}

{% set pageTitle = pageTitle %}
{% set headerTitle = headerTitle %}
{% set backLinkUrl = backLinkUrl %}
{%- set initiateScriptsConfig = [{ src: "/public/scripts/index.script.js" }] -%}

{% block pageTitle %}
	{% if errors %}
		{% set pageTitle = "Error: " + pageTitle %}
	{% endif %}

	{{ pageTitle }}
{% endblock %}

{% block head %}
	{% include "includes/head.njk" %}
{% endblock %}

{% block bodyStart %}
	{% include "includes/gtm-no-script.njk" %}

	{% include "includes/cookie-banner.njk" %}
{% endblock %}

{% block skipLink %}{% endblock %}

{% block header %}
	{{ pinsHeaderDefault(headerTitle, backLinkUrl) }}
{% endblock %}

{% block main %}
	{{ super() }}
{% endblock %}

{% block footer %}
	{% include "components/core/footer.njk" %}
{% endblock %}

{% block bodyEnd %}
	{% block script %}{% endblock %}

	{% include "includes/initiate-scripts.njk" %}
{% endblock %}
