{% extends "layouts/main.njk" %}

{% block pageTitle %}
  Confirmation - Register to have your say
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">Your comments are saved</h1>
        <div class="govuk-panel__body">
          Your interested party reference number<br><strong>{{ ipRefNo }}</strong>
        </div>
      </div>

      <p data-cy="email-confirmation">
        We have sent a confirmation email to: {{ email }}
      </p>
    </div>
  </div>

{% endblock %}
