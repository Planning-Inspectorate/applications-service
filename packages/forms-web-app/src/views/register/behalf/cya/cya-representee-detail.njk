{% set address %}
{{ data.representee.address.line1 }}<br>
{% if data.representee.address.line2 %}
  {{ data.representee.address.line2 }}<br>
{% endif %}
{% if data.representee.address.line3 %}
  {{ data.representee.address.line3 }}<br>
{% endif %}
{{ data.representee.address.postcode }}<br>
{{ data.representee.address.country }}
{% endset %}

{% if data.representing === 'person' %}
  {% set representing = "What is the full name of the person you are representing?" %}
{% elseif data.representing === 'organisation' %}
  {% set representing = "What is the full name of the organisation or charity that you are representing?" %}
{% elseif data.representing === 'family' %}
  {% set representing = "What is the name of the family group you are representing?" %}
{% endif %}

<h2 class="govuk-heading-m">Who you are representing</h2>
{{ govukSummaryList({
        classes: "govuk-summary-list govuk-!-margin-bottom-9",
        rows: [
          {
            key: {
              text: representing
            },
            value: {
              text: summaryField( data.representee["full-name"], { 'data-cy': "full-name" })
            },
            actions: {
              items: [
                {
                  href: "/register/behalf/representee-name?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "??",
                  attributes: { "data-cy": "full-name" }
                }
              ]
            }
          },
          {
            key: {
              text: "Are they 18 or over?"
            },
            value: {
              text: summaryField( data.representee['over-18'] | title, { 'data-cy': "over-18" })
            },
            actions: {
              items: [
                {
                  href: "/register/behalf/representee-over-18?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "??",
                  attributes: { "data-cy": "over-18" }
                }
              ]
            }
          },
          {
            key: {
              text: "Their address"
            },
            value: {
              html: address
            },
            actions: {
              items: [
                {
                  href: "/register/behalf/representee-address?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "??",
                  attributes: { "data-cy": "address" }
                }
              ]
            }
          },
          {
            key: {
              text: "Their email address"
            },
            value: {
              text: summaryField( data.representee['email'], { 'data-cy': "email" })
            },
            actions: {
              items: [
                {
                  href: "/register/behalf/representee-email?mode=edit",
