                  attributes: { "data-cy": "telephone" }
                }
              ]
            }
          },
          {
            key: {
              text: "Registration comments"
            },
            value: {
              text: summaryField( data['comment'], { 'data-cy': "comment" })
            },
            actions: {
              items: [
                {
                  href: "/register/behalf/tell-us-about-project?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "??",
                  attributes: { "data-cy": "comment" }
                }
              ]
            }
          }
        ]
      }) }}