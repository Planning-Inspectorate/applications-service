{% extends "layouts/main.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %},
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% set title="Organisation name - Register to have your say" %}

{% block pageTitle %}
  {% if errors %}
    {% set title="Error: " + title %}
  {% endif %}
  {{ title }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary
        }) }}
      {% endif %}
      <form action="" method="POST" novalidate>
        <div class="govuk-form-group {{ 'govuk-form-group--error' if errors }}">
          
          {{ govukInput({
            label: {
                text: "What is the name of the organisation you work for?",
                classes: "govuk-label--l",
                isPageHeading: true
            },
            hint: {
                text: "We will publish your organisation name, your client's name and their comments on the website."
            },
            classes: "govuk-input--width-20",
            id: "organisation-name",
            name: "organisation-name",
            value: organisationName,
            attributes: {"data-cy": "organisation-name"},
            errorMessage: errors['organisation-name'] and {
              text: errors['organisation-name'].msg
            }
          }) }}
        </div>

        {{ govukButton({
          text: "Continue",
          type: "Submit",
          attributes: { "data-cy":"button-save-and-continue"}
        }) }}

      </form>
      <a class="govuk-body govuk-link" href="/register/behalf/address">I don't work for an organisation</a>
    </div>
  </div>

{% endblock %}

