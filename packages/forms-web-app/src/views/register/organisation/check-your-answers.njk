{% extends "layouts/register-main.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "../../macros/bool-to-sentence-case.njk" import boolToSentenceCaseField %}
{% from "../../macros/summary-field.njk" import summaryField %}

{% block pageTitle %}
  Check your answers before registering - Registering for an organisation - Register to have your say about a national infrastructure project - National Infrastructure Planning
{% endblock %}

{% set address %}
{{ data.address.line1 }}<br>
{% if data.address.line2 %}
  {{ data.address.line2 }}<br>
{% endif %}
{% if data.address.line3 %}
  {{ data.address.line3 }}<br>
{% endif %}
{{ data.address.postcode }}<br>
{{ data.address.country }}
{% endset %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">

      <h1 class="govuk-heading-xl">Check your answers before registering</h1>

      <h2 class="govuk-heading-m">Personal details</h2>
      {{ govukSummaryList({
        classes: "govuk-summary-list govuk-!-margin-bottom-9",
        rows: [
          {
            key: {
              text: "Who are you registering for?"
            },
            value: {
              text: summaryField( "An organisation I work or volunteer for", { 'data-cy': "type-of-party" })
            },
            actions: {
              items: [
                {
                  href: "/register/who-registering-for?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "who are you registering for",
                  attributes: { "data-cy": "who-are-you" }
                }
              ]
            }
          },
          {
            key: {
              text: "Full name"
            },
            value: {
              text: summaryField( data['full-name'], { 'data-cy': "full-name" })
            },
            actions: {
              items: [
                {
                  href: "/register/organisation/full-name?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "your full name",
                  attributes: { "data-cy": "full-name" }
                }
              ]
            }
          },
          {
            key: {
              text: "Are you 18 or over?"
            },
            value: {
              text: summaryField( data['over-18'] | title, { 'data-cy': "over-18" })
            },
            actions: {
              items: [
                {
                  href: "/register/organisation/over-18?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "if you are over 18",
                  attributes: { "data-cy": "over-18" }
                }
              ]
            }
          },
          {
            key: {
              text: "What is the name of your organisation or charity?"
            },
            value: {
              text: summaryField( data['organisation-name'] | title, { 'data-cy': "organisation-name" })
            },
            actions: {
              items: [
                {
                  href: "/register/organisation/organisation-name?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "the name of your organisation or charity",
                  attributes: { "data-cy": "organisation-name" }
                }
              ]
            }
          },
          {
            key: {
              text: "What is your job title or volunteer role?"
            },
            value: {
              text: summaryField( data['role'] | title, { 'data-cy': "volunteer-role" })
            },
            actions: {
              items: [
                {
                  href: "/register/organisation/role?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "your job title or volunteer role",
                  attributes: { "data-cy": "volunteer-role" }
                }
              ]
            }
          }, 
          {
            key: {
              text: "Email address"
            },
            value: {
              text: summaryField( data['email'], { 'data-cy': "email" })
            },
            actions: {
              items: [
                {
                  href: "/register/organisation/email?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "your email address",
                  attributes: { "data-cy": "email" }
                }
              ]
            }
          },                   
          {
            key: {
              text: "Address"
            },
            value: {
              html: address
            },
            actions: {
              items: [
                {
                  href: "/register/organisation/address?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "your address",
                  attributes: { "data-cy": "address" }
                }
              ]
            }
          },
          {
            key: {
              text: "Telephone number"
            },
            value: {
              text: summaryField( data['telephone'], { 'data-cy': "telephone" })
            },
            actions: {
              items: [
                {
                  href: "/register/organisation/telephone?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "your telephone number",
                  attributes: { "data-cy": "telephone" }
                }
              ]
            }
          },
          {
            key: {
              text: "Registration comments"
            },
            value: {
              text: summaryField( data['comment'], { 'data-cy': "comment" })
            },
            actions: {
              items: [
                {
                  href: "/register/organisation/tell-us-about-project?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "registration comments",
                  attributes: { "data-cy": "comment" }
                }
              ]
            }
          }         
        ]
      }) }}

      <a href="/register/organisation/declaration" role="button"  class="govuk-button govuk-button"  data-module="govuk-button">
        Continue to declaration
      </a>
    </div>
  </div>
{% endblock %}