{% extends "layouts/main.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "../../macros/bool-to-sentence-case.njk" import boolToSentenceCaseField %}
{% from "../../macros/summary-field.njk" import summaryField %}

{% block pageTitle %}
  Check your answers - Register to have your say
{% endblock %}

{% set address %}
{{ data.address.line1 }}<br>
{% if data.address.line2 %}
  {{ data.address.line2 }}<br>
{% endif %}
{% if data.address.line3 %}
  {{ data.address.line3 }}<br>
{% endif %}
{{ data.address.postcode }}<br>
{{ data.address.country }}
{% endset %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">

      <h1 class="govuk-heading-xl">Check your answers before registering</h1>

      <h2 class="govuk-heading-m">Personal details</h2>
      {{ govukSummaryList({
        classes: "govuk-summary-list govuk-!-margin-bottom-9",
        rows: [
          {
            key: {
              text: "Who are you registering for?"
            },
            value: {
              text: summaryField( "Myself", { 'data-cy': "type-of-party" })
            },
            actions: {
              items: [
                {
                  href: "/register/type-of-party?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "if the application was made in your name",
                  attributes: { "data-cy": "who-are-you" }
                }
              ]
            }
          },
          {
            key: {
              text: "Full name"
            },
            value: {
              text: summaryField( data['full-name'], { 'data-cy': "full-name" })
            },
            actions: {
              items: [
                {
                  href: "/register/myself/full-name?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "??",
                  attributes: { "data-cy": "full-name" }
                }
              ]
            }
          },
          {
            key: {
              text: "Are you 18 or over?"
            },
            value: {
              text: summaryField( data['over-18'] | title, { 'data-cy': "are-you-18-over" })
            },
            actions: {
              items: [
                {
                  href: "/register/myself/over-18?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "??",
                  attributes: { "data-cy": "over-18" }
                }
              ]
            }
          },
          {
            key: {
              text: "Address"
            },
            value: {
              html: address
            },
            actions: {
              items: [
                {
                  href: "/register/myself/address?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "??",
                  attributes: { "data-cy": "address" }
                }
              ]
            }
          },
          {
            key: {
              text: "Email address"
            },
            value: {
              text: summaryField( data['email'], { 'data-cy': "email" })
            },
            actions: {
              items: [
                {
                  href: "/register/myself/email?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "??",
                  attributes: { "data-cy": "email" }
                }
              ]
            }
          },
          {
            key: {
              text: "Telephone number"
            },
            value: {
              text: summaryField( data['telephone'], { 'data-cy': "telephone" })
            },
            actions: {
              items: [
                {
                  href: "/register/myself/telephone?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "??",
                  attributes: { "data-cy": "telephone" }
                }
              ]
            }
          },
          {
            key: {
              text: "Registration comments"
            },
            value: {
              text: summaryField( data['comment'], { 'data-cy': "comment" })
            },
            actions: {
              items: [
                {
                  href: "/register/myself/comments?mode=edit",
                  text: "Change",
                  visuallyHiddenText: "??",
                  attributes: { "data-cy": "comment" }
                }
              ]
            }
          }
        ]
      }) }}

      {{ govukSummaryList({
          classes: "govuk-summary-list govuk-!-margin-bottom-9",
          rows: commentsRow
      }) }}

      <a href="/register/myself/declaration" role="button"  class="govuk-button govuk-button"  data-module="govuk-button">
        Accept and continue
      </a>
    </div>
  </div>
{% endblock %}