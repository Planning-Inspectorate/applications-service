{% extends "layouts/default.njk" %}

{% block pageTitle %}
  {{ t('errors.pageNotFound.title') }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ t('errors.pageNotFound.heading') }}</h1>
      <p class="govuk-body">
        {{ t('errors.pageNotFound.paragraph1') }}
      </p>
      <p class="govuk-body">
        {{ t('errors.pageNotFound.paragraph2') }}
      </p>
      <p class="govuk-body">
        {{ t('errors.pageNotFound.paragraph3') }}
      </p>

      <p class="govuk-body">
				<strong>{{ t('errors.common.online') }}</strong>
        		<br>
        		<a class="govuk-link" href="{{ pinsContactDetails.contactUsFormURL }}">{{ t('errors.common.contactFormLinkText') }}</a>
      		</p>

			<p class="govuk-body">
				<strong>{{ t('errors.common.phone') }}</strong>
				<br>
				{{ pinsContactDetails.supportTeamPhoneNumber }}
				<p>
					{{ t("common.pinsContactDetails.csOpeningHoursLine1") }}
					<br>
					{{ t("common.pinsContactDetails.csOpeningHoursLine2") }}
				</p>
			</p>
    </div>
  </div>
{% endblock %}

