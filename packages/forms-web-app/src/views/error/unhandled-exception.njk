{% extends "layouts/default.njk" %}

{% block pageTitle %}
  {{ t('errors.common.serviceUnavailable') }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ t('errors.common.serviceUnavailable') }}</h1>
      <p class="govuk-body">
        {{ t('errors.unhandledException.paragraph1') }}
      </p>
      <p class="govuk-body">
        {{ t('errors.common.questions') }}
      </p>
			{% if correlationId %}
				<p class="govuk-body">
					{{ t('errors.common.errorId') }}:	{{ correlationId }}
				</p>
			{% endif %}

      {% include "error/_includes/contact-details.njk" %}
    </div>
  </div>

{% endblock %}
