{% extends "layouts/default.njk" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">{{ t('errors.plannedOutage.title') }}</h1>
            {% if outageResumeText %}
                <p class="govuk-body">{{ outageResumeText }}</p>
            {% endif %}
            <p class="govuk-body">{{ t('errors.plannedOutage.urgentQuestions') }}</p>
            <p class="govuk-body">Email: <a href="mailto:{{ pinsContactDetails.enquiriesEmailAddress}}">{{ pinsContactDetails.enquiriesEmailAddress }}</a></p>
            <p class="govuk-body">{{ t('common.telephone') }}: {{ pinsContactDetails.supportTeamPhoneNumber}} </p>
            <p class="govuk-body">{{ t('errors.telephoneTimes') }}</p>
        </div>
    </div>
{% endblock %}
