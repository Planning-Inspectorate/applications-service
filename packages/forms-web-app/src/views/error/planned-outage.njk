{% extends "layouts/default.njk" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">Sorry, the service is unavailable</h1>
            {% if outageResumeText %}
                <p class="govuk-body">{{ outageResumeText }}</p>
            {% endif %}
            <p class="govuk-body">For urgent questions:</p>
            <p class="govuk-body">Email: <a href="mailto:{{ pinsContactDetails.enquiriesEmailAddress}}">{{ pinsContactDetails.enquiriesEmailAddress }}</a></p>
            <p class="govuk-body">Telephone: {{ pinsContactDetails.supportTeamPhoneNumber}} </p>
            <p class="govuk-body">Monday to Friday, 9am to 12pm (except public holidays)</p>
        </div>
    </div>
{% endblock %}