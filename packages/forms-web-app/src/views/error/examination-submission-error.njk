{% extends "layouts/default.njk" %}

{% block pageTitle %}
	{{ pageTitle }}
{% endblock %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<h1 class="govuk-heading-l">Sorry, there is a problem with the service</h1>
			<p class="govuk-body">
				You'll be able to use the service again later.
			</p>
			<p class="govuk-body">
				Sorry, your information has not been saved.
			</p>
			<p class="govuk-body">
				You will need to <a href="{{ submitCommentsURL }}" data-cy="submit-comments">retry and process
					your submission again.</a>
			</p>
			<h2 class="govuk-heading-s">Telephone</h2>
			<p class="govuk-body">
				If you have an interested party number, have it with you when you call.
			</p>
			<ul class="govuk-list">
				<li>Telephone: 0303 444 5000</li>
				<li>Monday to Friday, 9am to 12pm (except public holidays)</li>
			</ul>
			<h2 class="govuk-heading-s">Email</h2>
			<p>
				<a data-cy="project-enquiries" href="mailto:{{ projectEmail }}"
					 aria-label="Send an email to the project team">{{ projectEmail }}</a>
			</p>
			<p>
				We aim to respond within 10 working days.
			</p>
		</div>
	</div>
{% endblock %}
