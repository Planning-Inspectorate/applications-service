                        </svg>
                        <strong>Next</strong>
                        <span>Find a project</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="govuk-grid-column-one-third">
        {{ pinsStepByStepNavigation({
            id: "ip-step-by-step-one",
            useIPDefaultStepByStep: true,
            currentDefaultStep: 5
        }) }}
        </div>


    </div>

{% endblock %}

{% block footer %}
    {{ pinsFooter() }}
{% endblock %}
