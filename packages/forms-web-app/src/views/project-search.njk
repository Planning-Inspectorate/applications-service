{% set containerClasses = "pins-sidebar--container" %}
{% set hasContentsAside = true %}

{% block content %}
  <h1 class="govuk-heading-l">All Projects</h1>
  <div class="govuk-grid-row">
    <section class="pins-document-library-search govuk-grid-column-one-quarter">
      <label class="pins-label-small" for="search_documents">Search</label>
      <div class="pins-document-library-search-wrapper">
        <input class="search-documents-input" type="text" name="search" id="search_documents">
        <button class="search-documents-submit" type="submit" value="Search">Search</button>
      </div>
      <div class="govuk-accordion" data-module="govuk-accordion" id="accordion-default">
        <h3 class="govuk-heading-s">Filters</h3>
        <div class="govuk-accordion__section govuk-checkboxes--small pins-filter-checkboxes">
          <div class="govuk-accordion__section-header">
            <h2 class="govuk-accordion__section-heading">
              <span class="govuk-accordion__section-button" id="accordion-content-heading-theme">
                Location
              </span>
            </h2>
          </div>
          <div id="accordion-content-theme-noise-traffic-air" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-content-heading-theme">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="theme-noise-traffic-air">
            <label class="govuk-label govuk-checkboxes__label" for="theme-noise-traffic-air">East Midlands (10)</label>
          </div>
          <div id="accordion-content-landscape-and-visual" class="govuk-accordion__section-content  govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-content-heading-theme">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="theme-landscape-visual">
            <label class="govuk-label govuk-checkboxes__label" for="theme-landscape-visual">Eastern (39)</label>
          </div>
          <div id="accordion-content-heritage" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-content-heading-theme">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="heritage">
            <label class="govuk-label govuk-checkboxes__label" for="heritage">London (7)</label>
          </div>
          <div id="accordion-content-theme-wildlife-habitats" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-content-heading-theme">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="theme-wildlife-habitats">
            <label class="govuk-label govuk-checkboxes__label" for="theme-wildlife-habitats">North East (14)</label>
          </div>
          <div id="accordion-content-theme-wildlife-habitats" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-content-heading-theme">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="theme-wildlife-habitats">
            <label class="govuk-label govuk-checkboxes__label" for="theme-wildlife-habitats">North West (17)</label>
          </div>
          <div id="accordion-content-theme-wildlife-habitats" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-content-heading-theme">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="theme-wildlife-habitats">
            <label class="govuk-label govuk-checkboxes__label" for="theme-wildlife-habitats">South East (29)</label>
          </div>
          <div id="accordion-content-theme-wildlife-habitats" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-content-heading-theme">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="theme-wildlife-habitats">
            <label class="govuk-label govuk-checkboxes__label" for="theme-wildlife-habitats">South West (15)</label>
          </div>
          <div id="accordion-content-theme-wildlife-habitats" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-content-heading-theme">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="theme-wildlife-habitats">
            <label class="govuk-label govuk-checkboxes__label" for="theme-wildlife-habitats">Yorkshire and the Humber (29)</label>
          </div>
        </div>
        <div class="govuk-accordion__section govuk-checkboxes--small pins-filter-checkboxes">
          <div class="govuk-accordion__section-header">
            <h2 class="govuk-accordion__section-heading">
              <span class="govuk-accordion__section-button" id="accordion-default-heading-who-submitted">
              Project type
              </span>
            </h2>
          </div>
          <div id="accordion-content-examining-panel" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-default-heading-who-submitted">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="who-submitted-examining-panel">
            <label class="govuk-label govuk-checkboxes__label" for="who-submitted-examining-panel">Business and commercial (2)</label>
          </div>
          <div id="accordion-content-developer" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-default-heading-who-submitted">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="who-submitted-developer">
            <label class="govuk-label govuk-checkboxes__label" for="who-submitted-developer">Energy (109)</label>
          </div>
          <div id="accordion-content-individual-interested-party" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-default-heading-who-submitted">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="who-submitted-individual-interested-party">
            <label class="govuk-label govuk-checkboxes__label" for="who-submitted-individual-interested-party">Transport (67)</label>
          </div>
          <div id="accordion-content-organisation-interested-party" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-default-heading-who-submitted">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="who-submitted-organisation-interested-party">
            <label class="govuk-label govuk-checkboxes__label" for="who-submitted-organisation-interested-party">Waste (7)</label>
          </div>
          <div id="accordion-content-official-body-and-local-authority" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-default-heading-who-submitted">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="who-submitted-official-body-and-local-authority">
            <label class="govuk-label govuk-checkboxes__label" for="who-submitted-official-body-and-local-authority">Water (1)</label>
          </div>
        </div>
        <div class="govuk-accordion__section govuk-checkboxes--small pins-filter-checkboxes">
          <div class="govuk-accordion__section-header">
            <h2 class="govuk-accordion__section-heading">
              <span class="govuk-accordion__section-button" id="accordion-default-heading-type-of-information">
                Status
              </span>
            </h2>
          </div>
          <div id="accordion-content-plans-and-drawings" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-default-heading-type-of-information">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="type-plans-and-drawings">
            <label class="govuk-label govuk-checkboxes__label" for="type-plans-and-drawings">Pre-application (60)</label>
          </div>
          <div id="accordion-content-environmental" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-default-heading-type-of-information">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="type-environmental">
            <label class="govuk-label govuk-checkboxes__label" for="type-environmental">Acceptance and application (3)</label>
          </div>
          <div id="accordion-content-procedure" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-default-heading-type-of-information">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="type-procedure">
            <label class="govuk-label govuk-checkboxes__label" for="type-procedure">Pre-examination (6)</label>
          </div>
          <div id="accordion-content-consultation-reports" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-default-heading-type-of-information">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="type-consultation-reports">
            <label class="govuk-label govuk-checkboxes__label" for="type-consultation-reports">Examination (8)</label>
          </div>
          <div id="accordion-content-procedure" class="govuk-accordion__section-content govuk-checkboxes__item govuk-checkboxes__item" aria-labelledby="accordion-default-heading-type-of-information">
            <input class="govuk-checkboxes__input" type="checkbox" name="theme" id="type-procedure">
            <label class="govuk-label govuk-checkboxes__label" for="type-procedure">Decision (105)</label>
          </div>
        </div>
      </div>
    </section>

    <section class="pins-document-library-search govuk-grid-column-two-thirds">
      <h2 class="govuk-heading-s">{{ noOfProjects }} projects</h2>
      <div class="pins-search-results-pagination" id="pins-search-results-pagination">
        <div class="document-results-sort">
          <label class="govuk-label" for="document-results-sort">Sort by
                    <select id="document-results-sort" class="govuk-select">
              <option selected>Alphabetical A-Z</option>
            </select>
            <hr/>
            <table class="govuk-table">
              <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                  <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Project name</th>
                  <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Developer name</th>
                  <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Status</th>
                </tr>
              </thead>
              <tbody class="govuk-table__body">

                {% for list in appList %}
                  <tr class="govuk-table__row">
                    <td class="govuk-table__cell">
                      <a href="/examination/{{ list.CaseReference }}">{{ list.ProjectName }}</a>
                    </td>
                    <td class="govuk-table__cell">{{ list.PromoterName }}</td>
                    <td class="govuk-table__cell">
                      <strong class="govuk-tag govuk-tag--blue">{{ list.Stage }}</strong>
                    </td>
                  </tr>
                {% endfor %}

              </tbody>
            </table>
          </div>
        </div>

        <p class="govuk-body govuk-!-font-weight-bold">Displaying 1-12 of {{ noOfProjects }}</p>
        <div class="pins-search-results-pagination" id="pins-search-results-pagination">
          <a href="#" class="govuk-link govuk-link--no-underline">1</a>
          <a href="#" class="govuk-link">2</a>
          <a href="#" class="govuk-link">Next</a>
        </div>
      {% endblock %}

      {% block footer %}
        {{ pinsFooter() }}
      {% endblock %}
