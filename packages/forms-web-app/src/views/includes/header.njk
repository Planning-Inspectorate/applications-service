{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/skip-link/macro.njk" import govukSkipLink %}

<header role="banner">
	{{ govukSkipLink({
		href: '#main-content',
		text: 'Skip to main content'
	}) }}

	<div class="pins-header">
		<div class="govuk-header__container pins-header__container govuk-width-container">
			<div class="govuk-header__logo">
				<span class="govuk-header__logotype">
					{% include "components/core/pins-logo.njk" %}
				</span>
			</div>
			<div class="govuk-header__content">
				<span class="govuk-header__service-name">{{ headerTitle }}</span>
			</div>
		</div>
	</div>

	<div class="govuk-width-container">
		{% include "components/core/banner.njk" %}

		{% include "includes/primary-navigation.njk" %}

		{% if backLinkUrl %}
			{% if backLinkUrl == 'show' %}
				<a class="govuk-back-link" href="javascript:history.back()">Back</a>
			{% else %}
				{{ govukBackLink({
					attributes: {
						'data-cy': 'back',
						'id': 'back-link'
					},
					href: backLinkUrl,
					text: "Back"
				}) }}
			{% endif %}

		{% endif %}
	</div>
</header>