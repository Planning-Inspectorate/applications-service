{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block content %}
 <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">{{ deadlineTitle }}</span>

      <h1 class="govuk-heading-l">{{ title }}</h1>

      <h2 class="govuk-heading-m">{{ summaryListDetailsTitle }}</h2>

      {{ govukSummaryList({
        classes: 'govuk-!-margin-bottom-9',
        rows: summaryListDetails
      }) }}

      <h2 class="govuk-heading-m">{{ summaryListSubmissionItemsTitle }}</h2>

      {{ govukSummaryList({
        classes: 'govuk-!-margin-bottom-9',
        rows: summaryListSubmissionItems
      }) }}

      <div class="visible-on visible-on--js-enabled">
        {{ govukWarningText({
          iconFallbackText: "Warning",
          text: "You cannot make any further changes after you press submit."
        }) }}

        <a class="govuk-button" href="{{ nextPageUrl }}">
          Submit
        </a>
      </div>

      <noscript>
        {{ govukWarningText({
          iconFallbackText: "Warning",
          text: "You cannot make any further changes after you press continue."
        }) }}

        <a class="govuk-button" href="{{ nextPageUrl }}">
          Continue
        </a>
      </noscript>
    </div>
  </div>
{% endblock %}
