		"axios-logger": "^2.6.1",
		"body-parser": "^1.19.0",
		"chokidar": "^3.5.3",
		"compression": "^1.7.4",
		"connect-redis": "^6.1.3",
		"cookie-parser": "~1.4.4",
		"csv-stringify": "^6.4.2",
		"dayjs": "^1.11.7",
		"dotenv": "^16.3.1",
		"express": "^4.20.0",
		"express-async-errors": "^3.1.1",
		"express-fileupload": "^1.4.0",
		"express-pino-logger": "^5.0.0",
		"express-session": "^1.17.2",
		"express-validator": "^6.12.1",
		"form-data": "^4.0.0",
		"govuk-frontend": "^5.6.0",
		"helmet": "^6.0.1",
		"html-escaper": "^2.0.2",
