{
	"private": true,
	"engines": {
		"node": ">=14.0.0 <15.0.0",
		"npm": ">=6.0.0 <7.0.0"
	},
	"name": "applications-service",
	"description": "Application - these are utility scripts for the whole repo",
	"workspaces": [
		"packages/*",
		"!packages/common"
	],
	"scripts": {
		"commit": "cz",
		"commitlint": "commitlint --from=$(git log origin/main..$(git rev-parse --abbrev-ref HEAD) --pretty=format:\"%H\" | tail -n 1)",
		"format": "prettier --write \"**/*.{js,ts,json,md}\"",
		"lint": "run-s --continue-on-error --print-label lint:api lint:common lint:e2e-tests lint:web",
		"lint:api": "cd packages/applications-service-api; eslint ./",
		"lint:api:fix": "cd packages/applications-service-api; eslint ./ --fix",
		"lint:common": "cd packages/common; eslint ./",
		"lint:common:fix": "cd packages/common; eslint ./ --fix",
		"lint:e2e-tests": "cd e2e-tests; eslint ./",
		"lint:e2e-tests:fix": "cd e2e-tests; eslint ./ --fix",
		"lint:fix": "run-s --continue-on-error --print-label lint:api:fix lint:common:fix lint:e2e-tests:fix lint:web:fix",
		"lint:web": "cd packages/forms-web-app; eslint ./",
		"lint:web:fix": "cd packages/forms-web-app; eslint ./ --fix",
		"prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
		"release": "multi-semantic-release",
		"test": "run-s --continue-on-error --print-label \"test:*\"",
		"test:api": "cd packages/applications-service-api; npm run test:cov",
		"test:common": "cd packages/common; npm run test:cov",
		"test:web": "cd packages/forms-web-app; npm run test:cov",
		"semantic-release": "semantic-release"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Planning-Inspectorate/applications-service.git"
	},
	"author": "Foundry4 <www.foundry4.com>",
	"license": "ISC",
	"homepage": "https://github.com/Planning-Inspectorate/applications-service#readme",
	"devDependencies": {
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-conventional": "^17.0.2",
		"@semantic-release/exec": "^6.0.3",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jest": "^26.5.3",
		"husky": "^8.0.0",
		"lint-staged": "^13.0.0",
		"multi-semantic-release": "^2.13.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"semantic-release": "^19.0.3"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix"
		],
		"*.{js,ts,json,md}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"release": {
		"branches": [
			"task/release-pipeline",
			"main"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/github",
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/exec",
				{
					"prepareCmd": "echo \"${nextRelease.version}\" > .release-version"
				}
			]
		]
	}
}
