{
  "name": "application-service",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=14.0.0 <15.0.0",
    "npm": ">=6.0.0 <7.0.0"
  },
  "description": "Application - these are utility scripts for the whole repo",
  "main": "index.js",
  "scripts": {
    "commit": "cz",
    "commitlint": "commitlint --from 60c94b6 --to HEAD",
    "format": "prettier --write \"*.js\" \"data/*.js\"",
    "semantic-release": "semantic-release",
    "test:e2e": "cd ./e2e-tests && npm run test:e2e",
    "test:e2e:lpa": "cd ./lpa-submissions-e2e-tests && npm run test:e2e",
    "test:e2e:demo": "cd ./e2e-tests && npm run test:e2e:demo",
    "test:e2e:postprocess": "cd ./e2e-tests && npm run test:e2e:postprocess",
    "test:e2e:lpa:postprocess": "cd ./lpa-submissions-e2e-tests && npm run test:e2e:postprocess",
    "test:e2e:files": "cd ./e2e-tests && ./create-large-test-files.sh",
    "test:e2e:smoke": "cd ./e2e-tests && BASEURL=$BASEURL npm run test:e2e:smoke",
    "test": "echo \"Error: no test specified\" && exit 1",
    "document:applications-service-api": "cd ./packages/applications-service-api && npm install && npm run documentation"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Planning-Inspectorate/applications-service.git"
  },
  "author": "Foundry4 <www.foundry4.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Planning-Inspectorate/applications-service.git"
  },
  "homepage": "https://github.com/Planning-Inspectorate/applications-service#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "semantic-release": "^17.2.3",
    "semantic-release-monorepo": "^7.0.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run commitlint"
    }
  },
  "dependencies": {
    "@planning-inspectorate/pins-components": "^2.0.0",
    "axe-core": "^4.3.5",
    "cypress-axe": "^0.14.0",
    "moment": "^2.29.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
