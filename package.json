{
  "private": true,
  "engines": {
    "node": ">=14.0.0 <15.0.0",
    "npm": ">=6.0.0 <7.0.0"
  },
  "description": "Application - these are utility scripts for the whole repo",
  "scripts": {
    "commit": "cz",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "lint": "npm run lint:api & npm run lint:common & npm run lint:e2e-tests & npm run lint:web",
    "lint:api": "cd packages/applications-service-api; eslint ./",
    "lint:common": "cd packages/common; eslint ./",
    "lint:e2e-tests": "cd e2e-tests; eslint ./",
    "lint:fix": "npm run lint:api -- --fix & npm run lint:common -- --fix & npm run lint:e2e-tests -- --fix & npm run lint:web -- --fix",
    "lint:web": "cd packages/forms-web-app; eslint ./",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "semantic-release": "semantic-release",
    "test:e2e": "cd ./e2e-tests && npm run test:e2e",
    "test:e2e:demo": "cd ./e2e-tests && npm run test:e2e:demo",
    "test:e2e:postprocess": "cd ./e2e-tests && npm run test:e2e:postprocess",
    "test:e2e:smoke": "cd ./e2e-tests && BASEURL=$BASEURL npm run test:e2e:smoke",
    "document:applications-service-api": "cd ./packages/applications-service-api && npm install && npm run documentation"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Planning-Inspectorate/applications-service.git"
  },
  "author": "Foundry4 <www.foundry4.com>",
  "license": "ISC",
  "homepage": "https://github.com/Planning-Inspectorate/applications-service#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.5.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.7.1",
    "semantic-release": "^17.2.3",
    "semantic-release-monorepo": "^7.0.3"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix"
    ],
    "*.{js,ts,json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
